<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="feedback_view_tree" model="ir.ui.view">
            <field name="name">feedback.view.tree</field>
            <field name="model">feedback</field>
            <field name="arch" type="xml">
                <tree string="feedback">
                    <field name="name_id"/>
                    <field name="user_name"/>
                    <field name="user_code"/>
                </tree>
            </field>
        </record>
        <record id="feedback_view_form" model="ir.ui.view">
            <field name="name">feedback.view.form</field>
            <field name="model">feedback</field>
            <field name="arch" type="xml">
                <form string="electronic_items">
                    <sheet>
                        <group>
                            <field name="name_id" domain="[('purchase','=',True)]"/>
                            <field name="user_name"/>
                            <field name="user_code"/>
                            <field name="product_code"/>
                            <field name="production_date"/>
                            <field name="validity"/>
                            <field name="positive"/>
                            <field name="negative"/>
                            <field name="replace"/>
                            <field name="reason" attrs="{'invisible':[('replace','!=',True)]}"/>
                            <field name="purchase_date" attrs="{'invisible':[('replace','!=',True)]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="feedback_action" model="ir.actions.act_window">
            <field name="name">Feedback</field>
            <field name="res_model">feedback</field>
            <field name="view_mode">form</field>

        </record>
        <menuitem id="feedback_menu" name="Feedback" action="feedback_action" parent="electric_menu"/>

    </data>
</odoo>
