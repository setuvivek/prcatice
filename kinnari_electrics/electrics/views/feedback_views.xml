<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="feedback_view_tree" model="ir.ui.view">
            <field name="name">feedback.view.tree</field>
            <field name="model">feedback</field>
            <field name="arch" type="xml">
                <tree string="feedback">
                    <field name="name_id"/>
                    <field name="user_code"/>
                    <field name="product_code"/>
                    <field name="production_date"/>
                    <field name="purchase_date"/>
                </tree>
            </field>
        </record>
        <record id="feedback_view_form" model="ir.ui.view">
            <field name="name">feedback.view.form</field>
            <field name="model">feedback</field>
            <field name="arch" type="xml">
                <form string="electronic_items">
                    <header>
                        <button name="replace_item" string="Request For Replace" type="object"
                                attrs="{'invisible':[('option','!=','replace')]}"/>
                        <button name="repair_item" string="Request For Repair" type="object"
                                attrs="{'invisible':[('option','!=','repair')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name_id" domain="[('purchase','=',True)]"
                                       options="{'no_create':True,'no_create_edit': True}"/>
                                <field name="user_code"/>
                                <field name="product_code"/>
                                <field name="production_date"/>
                                <field name="validity"/>
                            </group>
                            <group>

                                <field name="positive"/>
                                <field name="negative"/>
                                <field name="option" widget="radio"/>
                                <field name="reason" attrs="{'invisible':[('option','!=','replace')]}"/>
                                <field name="purchase_date" attrs="{'invisible':[('option','!=','replace')]}"/>
                                <field name="reason_repair" attrs="{'invisible':[('option','!=','repair')]}"/>
                            </group>

                        </group>
                            <field name="msg"/>


                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="feedback_action" model="ir.actions.act_window">
            <field name="name">Feedback</field>
            <field name="res_model">feedback</field>
            <field name="view_mode">tree,form</field>

        </record>
        <menuitem id="feedback_menu" name="Feedback" action="feedback_action" parent="electric_menu"/>

    </data>
</odoo>
