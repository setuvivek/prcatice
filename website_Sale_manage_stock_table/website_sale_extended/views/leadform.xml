<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="contact_us_form">
        <form id="contactus_form" action="/Setu_Lead_Form" method="post" data-pre-fill="true">
            <div class="s_website_form_rows row s_col_no_bgcolor">
                <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required"
                     data-type="char" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label"
                               style="width: 200px" for="name">
                            <span class="s_website_form_label_content">Name</span>
                            <span class="s_website_form_mark">*</span>
                        </label>
                        <div class="col-sm">
                            <input type="text" class="form-control s_website_form_input" name="name" id="name"
                                   t-att-value="request.env.user.name"/>
                            <!--                            <input type="text" name="name" placeholder="Name"/>-->

                        </div>
                    </div>
                </div>
                <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom"
                     data-type="char" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label"
                               style="width: 200px" for="phone">
                            <span class="s_website_form_label_content">Phone Number
                            </span>
                        </label>
                        <div class="col-sm">
                            <input id="phone" type="tel"
                                   class="form-control s_website_form_input"
                                   name="phone"
                                   t-att-value="request.env.user.partner_id.phone"/>
                        </div>
                    </div>
                </div>

                <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom"
                     data-type="char" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label"
                               style="width: 200px" for="partner_name">
                            <span class="s_website_form_label_content">Company</span>
                        </label>
                        <div class="col-sm">
                            <input id="partner_name" type="text"
                                   class="form-control s_website_form_input"
                                   name="partner_name"
                                   t-att-value="request.env.user.partner_id.company_name"/>
                        </div>
                    </div>
                </div>

                <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_required s_website_form_model_required"
                     data-type="char" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label"
                               style="width: 200px" for="contact5">
                            <span class="s_website_form_label_content">Product
                            </span>
                        </label>
                        <div class="col-sm">
                            <input id="contact5" type="text"
                                   class="form-control s_website_form_input"
                                   name="contact5"
                                   required=""
                                   t-att-value="product.name"/>

                        </div>
                    </div>
                </div>
                <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required"
                     data-type="text" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label"
                               style="width: 200px" for="contact_name">
                            <span class="s_website_form_label_content">Question</span>
                            <span class="s_website_form_mark">*</span>
                        </label>
                        <div class="col-sm">
                            <textarea id="contact_name"
                                      class="form-control s_website_form_input"
                                      name="contact_name" required="">I am Interested!!
                            </textarea>
                        </div>
                    </div>
                </div>
                <!--                <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom"-->
                <!--                     data-type="text" data-name="Field">-->
                <!--                    <div class="row s_col_no_resize s_col_no_bgcolor">-->
                <!--&lt;!&ndash;                        <label class="col-form-label col-sm-auto s_website_form_label"&ndash;&gt;-->
                <!--&lt;!&ndash;                               style="width: 200px" for="type">&ndash;&gt;-->
                <!--&lt;!&ndash;                            <span class="s_website_form_label_content">Type</span>&ndash;&gt;-->
                <!--&lt;!&ndash;                        </label>&ndash;&gt;-->
                <!--                        <div class="col-sm">-->
                <!--                            <input id="type" type="hidden"-->
                <!--                                   class="form-control s_website_form_input"-->
                <!--                                   name="type" value="lead"/>-->
                <!--                        </div>-->
                <!--                    </div>-->
                <!--                </div>-->

                <div>
                    <button type="submit" class="btn btn-info" formaction="/Setu_Lead_Form">submit</button>
                    <!--                    <input role="button"  value="Submit" action="/Setu_Lead_Form"/>-->
                </div>
            </div>
        </form>
    </template>

    <record id="submit_lead_thanks" model="website.page">
        <field name="name">Thanks (Submit Lead)</field>
        <field name="type">qweb</field>
        <field name="url">/Setu_Lead_Form</field>
        <field name="website_indexed" eval="False"/>
        <field name="is_published">True</field>
        <field name="key">website_sale_extended.submit_lead_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks (Submit Lead)" t-name="website_sale_extended.submit_lead_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thank You!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        <span>Your Lead has been Submit
                                            <b>successfully</b>
                                        </span>
                                    </div>
                                    <p>We will get back to you shortly.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>