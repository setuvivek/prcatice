                </t>
                <t t-if="request.env.user.name != 'Public user'">
                    <div id="add_to_cart_wra"
                         t-attf-class="{{'d-none' if combination_info['prevent_zero_price_sale'] else 'd-inline-flex'}} align-items-center mb-2 me-auto">
                        <!--                    To redirect on Contact  us page -->
                        <a data-animation-selector=".o_wsale_product_images" role="button"
                           t-attf-class="btn btn-primary js_check_product a-submit flex-grow-1" href="#"
                           data-bs-toggle="modal"
                           data-bs-target="#exampleModal">
                            Quotation
                        </a>

                        <!-- Modal -->

                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Lead Form</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close">-
                                        </button>
                                    </div>
                                    <div class="modal-body">

                                        <p t-call="website_sale_extended.contact_us_form"/>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
                <t t-else="">
                    <div id="add_to_cart_wra"
                         t-attf-class="{{'d-none' if combination_info['prevent_zero_price_sale'] else 'd-inline-flex'}} align-items-center mb-2 me-auto">
                        <a data-animation-selector=".o_wsale_product_images" role="button"
                           t-attf-class="btn btn-primary flex-grow-1 quabuton" href="/web/login">
                            Quotation
                        </a>
                    </div>
                    <!--                    <p t-call="website_sale_extended.stock"/>-->

                </t>


            </t>
            <t t-else="">
                <div id="add_to_cart_wrap"
                     t-attf-class="{{'d-none' if combination_info['prevent_zero_price_sale'] else 'd-inline-flex'}} align-items-center mb-2 me-auto">
                    <a data-animation-selector=".o_wsale_product_images" role="button" id="add_to_cart"
                       t-attf-class="btn btn-primary js_check_product a-submit flex-grow-1" href="#">
                        <i class="fa fa-shopping-cart me-2"/>
                        Add to cart
                    </a>
                </div>
            </t>
        </xpath>

