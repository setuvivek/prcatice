<odoo>
    <data>
        <record id="patient_view_tree" model="ir.ui.view">
            <field name="name">patient.view.tree</field>
            <field name="model">patient</field>
            <field name="arch" type="xml">
                <tree string="patient">
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="mobile"/>
                    <field name="address"/>
                    <field name="diseases"/>
                    <field name="doctor_ids"/>
                    <field name="doa"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="city_id"/>
                </tree>
            </field>
        </record>
         <record id="doctor_data" model="ir.actions.act_window">
            <field name="name">Doctor</field>
            <field name="res_model">doctor</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="patient_view_form" model="ir.ui.view">
            <field name="name">patient.view.form</field>
            <field name="model">patient</field>
            <field name="arch" type="xml">
                <form string="patient">
                    <header>
                        <field name="gender" widget="statusbar"/>
                        <button name="%(doctor_data)d" string="Doctor Record" type="action"/>
                    </header>
                    <sheet>
                        <group>

                            <group>
                                <field name="name"/>
                                <field name="age"/>
                                <field name="gender" widget="radio"/>
                                <field name="mobile"/>

                            </group>
                            <group>

                                <field name="diseases"/>
                                <field name="doctor_ids" domain="[('type','=',True)]"/>
                                <field name="doa"/>


                            </group>
                        </group>
                        <notebook>
                            <page string="Resident data">
                                <form string="data">
                                    <sheet>
                                        <group>
                                            <field name="address"/>
                                            <field name="country_id" attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                            <field name="state_id" attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                            <field name="city_id" attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>


                                        </group>
                                    </sheet>
                                </form>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="patient_action" model="ir.actions.act_window">
            <field name="name">Patient</field>
            <field name="res_model">patient</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="main_menu" name="Hospital Record" action="patient_action" sequence="1" />
        <menuitem id="patient_menu" name="Hospital Record" action="patient_action" parent="main_menu"/>
        <menuitem id="patient_menu1" name="Patient" action="patient_action" parent="patient_menu"/>



    </data>
</odoo>


