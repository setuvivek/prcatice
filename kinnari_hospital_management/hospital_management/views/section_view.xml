<odoo>
    <data>
        <record id="section_view_tree" model="ir.ui.view">
            <field name="name">section.view.tree</field>
            <field name="model">section</field>
            <field name="arch" type="xml">
                <tree string="section">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="doctor_id"/>
                    <field name="patient_id"/>

                </tree>
        </field>
        </record>
        <record id = "section_view_form" model="ir.ui.view">
            <field name="name">section.view.form</field>
            <field name="model">section</field>
            <field name="arch" type="xml">
                <form string="section">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="notes"/>
                            <field name="type"/>
                            <field name="doctor_id"  widget="many2many_tags"/>
                            <field name="patient_id"   widget="many2many_checkboxes"/>

                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="section_action" model="ir.actions.act_window">
            <field name="name">Section</field>
            <field name="res_model">section</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="section_menu" name="Section" action="section_action" parent="patient_menu"/>

    </data>
</odoo>
