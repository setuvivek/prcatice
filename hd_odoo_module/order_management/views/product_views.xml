<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_view_tree" model="ir.ui.view">
            <field name="name">product.view.tree</field>
            <field name="model">product</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="category"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="discount"/>
                    <field name="price"/>
                    <field name="available"/>
                    <field name="order_ids"/>
                </tree>
            </field>
        </record>

        <record id="product_view_form" model="ir.ui.view">
            <field name="name">product.view.form</field>
            <field name="model">product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="product">
                    <sheet>
                        <group string="Product Record">
                            <group>
                                <field name="category"/>
                                <field name="name" widget="char_emojis"/>
                                <field name="code"/>
                                <field name="description"/>
                                <field name="discount"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <field name="available"/>
                                <field name="incoming"/>
                                <field name="outgoing"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Order">
                                <field name="order_ids">
                                    <tree editable="bottom">
                                        <field name="customer_name"/>
                                        <field name="product_id"/>
                                        <field name="product_ids"/>
                                        <field name="quantity"/>
                                        <field name="order_date"/>
                                        <field name="price"/>
                                        <field name="discount"/>
                                        <field name="free_delivery"/>
                                        <field name="current_Date_Time"/>
                                        <field name="payment"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_action" model="ir.actions.act_window">
            <field name="name">Product</field>
            <field name="res_model">product</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root" name="Order"/>
        <menuitem id="root1" name="Order" parent="root"/>

        <menuitem id="product_menu" action="product_action" parent="root1"/>
        <!--        <menuitem id="product_menu" action="product_action" parent="root1" sequence="1"/>-->
    </data>
</odoo>



