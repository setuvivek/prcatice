<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="country_view_tree" model="ir.ui.view">
            <field name="name">country.view.tree</field>
            <field name="model">country</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="contact_partner_ids"/>
                    <field name="state_ids"/>
                    <field name="city_ids"/>
                </tree>
            </field>
        </record>

        <record id="country_view_form" model="ir.ui.view">
            <field name="name">country.view.form</field>
            <field name="model">country</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="country">
                    <sheet>
                        <group>
                            <field name="name"/>

                        </group>
                        <notebook>
                            <page string="Contact Partner">
                                <field name="contact_partner_ids"/>
                            </page>
                            <page string="City">
                                <field name="city_ids"/>
                            </page>
                            <page string="State">
                                <field name="state_ids"/>
                            </page>
                            <page string="Territories State">
                                <field name="territories_state" widget='many2many_tags' />
                            </page>
                            <page string="Ocean State">
                                <field name="ocean_state" widget='many2many_tags'/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="country_action" model="ir.actions.act_window">
            <field name="name">Country</field>
            <field name="res_model">country</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="country_menu" action="country_action" parent="root2"/>
    </data>
</odoo>
