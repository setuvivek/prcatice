<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_mother_tongue_view_tree" model="ir.ui.view">
            <field name="name">setu.mother.tongue.view.tree</field>
            <field name="model">setu.mother.tongue</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Mother Tongue">
                    <field name="name"/>
                    <field name="student_ids"/>
                </tree>
            </field>
        </record>

        <record id="setu_mother_tongue_view_form" model="ir.ui.view">
            <field name="name">setu.mother.tongue.view.form</field>
            <field name="model">setu.mother.tongue</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Mother Tongue">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Student">
                                <field name="student_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_mother_tongue_action" model="ir.actions.act_window">
            <field name="name">Mother Tongue</field>
            <field name="res_model">setu.mother.tongue</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setu_mother_tongue_menu" action="setu_mother_tongue_action" parent="root2"/>
    </data>
</odoo>