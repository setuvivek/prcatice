<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_grade_view_tree" model="ir.ui.view">
            <field name="name">setu.grade.view.tree</field>
            <field name="model">setu.grade</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Grade">
                    <field name="name"/>
                    <field name="grade_line_ids"/>
                </tree>
            </field>
        </record>

        <record id="setu_grade_view_form" model="ir.ui.view">
            <field name="name">setu.grade.view.form</field>
            <field name="model">setu.grade</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Grade">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Grade Lines">
                                <field name="grade_line_ids">
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_grade_action" model="ir.actions.act_window">
            <field name="name">Grade</field>
            <field name="res_model">setu.grade</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root" name="Setu School"/>
        <menuitem id="root_grade" name="Grade" parent="root"/>
        <menuitem id="setu_grade_menu" action="setu_grade_action" parent="root_grade"/>
    </data>
</odoo>