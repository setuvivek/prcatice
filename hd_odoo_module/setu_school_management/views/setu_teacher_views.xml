<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_teacher_view_tree" model="ir.ui.view">
            <field name="name">setu.teacher.view.tree</field>
            <field name="model">setu.teacher</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Teacher">
                    <field name="name"/>
                    <field name="work_address"/>
                    <field name="home_address"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="mobile"/>
                    <field name="school_id"/>
                    <field name="subject_ids"/>
                    <field name="student_ids"/>
                    <field name="standard_id"/>
                </tree>
            </field>
        </record>

        <record id="setu_teacher_view_form" model="ir.ui.view">
            <field name="name">setu.teacher.view.form</field>
            <field name="model">setu.teacher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Teacher">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="mobile"/>
                                <label for="street" string="Home Address"/>
                                <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="city_id" placeholder="City" class="o_address_city" options='{"no_open": True}'/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="is_teacher"/>
                                <field name="division_id"/>
                                <field name="subject_id"/>
                                <field name="teacher_id"/>
                            </group>

                            <group>
                                <field name="standard_id"/>
                                <field name="phone"/>
                                <field name="school_id"/>
                                <label for="street" string="Work Address"/>
                                <div class="o_address_format">
                                <field name="street2" placeholder="Street..." class="o_address_street"/>
                                <field name="city2_id" placeholder="City" class="o_address_city" options='{"no_open": True}'/>
                                <field name="state2_id" class="o_address_state" placeholder="State"
                                       options='{"no_open": True}'/>
                                <field name="zip2" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country2_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="medium_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Student">
                                <field name="student_ids"/>
                            </page>
                            <page string="Class">
                                <field name="subject_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_teacher_action" model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="res_model">setu.teacher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root3" name="Teacher" parent="root" groups="setu_school_management.group_teacher"/>
        <menuitem id="setu_teacher_menu" action="setu_teacher_action" parent="root3"/>

    </data>
</odoo>