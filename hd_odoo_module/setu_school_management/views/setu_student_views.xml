<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_student_view_tree" model="ir.ui.view">
            <field name="name">setu.student.view.tree</field>
            <field name="model">setu.student</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Student">
                    <field name="first_name" optional="show"/>
                    <field name="middle_name" optional="show"/>
                    <field name="last_name" optional="show"/>
                    <field name="gender" optional="hide"/>
                    <field name="address" optional="show"/>
                    <field name="city_id" optional="hide"/>
                    <field name="state_id" optional="hide"/>
                    <field name="country_id" optional="hide"/>
                    <field name="date_of_birth" optional="show"/>
                    <field name="blood_group" optional="hide"/>
                    <field name="weight" optional="hide"/>
                    <field name="height" optional="hide"/>
                    <field name="terminate_reason" optional="hide"/>
                    <field name="active" optional="show"/>
                    <field name="standard_id" optional="hide"/>
                    <field name="division_id" optional="hide"/>
                    <field name="medium_id" optional="hide"/>
                    <field name="email" optional="show"/>
                    <field name="phone" optional="hide"/>
                    <field name="school_id" optional="hide"/>
                    <field name="admission_date" optional="show"/>
                    <field name="academic_year_id" optional="hide"/>
                    <field name="roll_no" optional="show"/>
                    <field name="mother_tongue_id" optional="hide"/>
                    <field name="teacher_ids" optional="hide"/>
                    <field name="class_teacher_id" optional="hide"/>
                    <field name="subject_ids" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="setu_student_view_form" model="ir.ui.view">
            <field name="name">setu.student.view.form</field>
            <field name="model">setu.student</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="action_done" string="Action Done" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="first_name"/>
                                <field name="middle_name"/>
                                <field name="last_name"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="city_id" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="blood_group"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="active"/>
                                <field name="school_id" options='{"no_open": True}' domain="[('student_ids', '=', school_id)]"/>
                                <field name="standard_id"/>
                                <field name="division_id"/>
                                <field name="medium_id"/>
                                <field name="mother_tongue_id"/>
                            </group>
                            <group>
                                <field name="city_id"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                                <field name="gender"/>
                                <field name="weight"/>
                                <field name="height"/>
                                <field name="roll_no"/>
                                <field name="terminate_reason"/>
                                <field name="date_of_birth"/>
                                <field name="admission_date"/>
                                <field name="academic_year_id"/>
                                <field name="class_teacher_id" domain="['|',('city_id', '=', city_id), ('city2_id', '=', city_id)]"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Teacher">
                                <field name="teacher_ids"/>
                            </page>
                            <page string="Subject">
                                <field name="subject_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="setu_student_action" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">setu.student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root2" name="Student" parent="root"/>
        <menuitem id="setu_student_menu" action="setu_student_action" parent="root2"/>

    </data>
</odoo>