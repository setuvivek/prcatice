<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="_setu_school_view_tree" model="ir.ui.view">
            <field name="name">setu.school_.view.tree</field>
            <field name="model">setu.school</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="School_">
                    <!--                    <field name="image"/>-->
                    <field name="name"/>
                    <field name="address"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="student_ids"/>
                    <field name="teacher_ids"/>
                    <field name="school_standard_ids"/>
                </tree>
            </field>
        </record>

        <record id="setu_school_view_kanban" model="ir.ui.view">
            <field name="name">setu.school.view.kanban</field>
            <field name="model">setu.school</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image"/>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="student_ids"/>
                    <field name="teacher_ids"/>
                    <field name="school_standard_ids"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                            <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill o_setu_student_view_kanban">
                                <t t-if="record.image.raw_value">
                                    <div class="o_kanban_image_fill_left d-done d-md-block" t-attf-style="background-image:url('#{kanban_image('setu.school', 'image', record.image.raw_value)}')"/>
                                </t>
                                <t t-else="">
                                    <img class='o_kanban_image" alt="Avtar" t-att-src="_s + "/setu_school_management/contact.png"'/>
                                </t>
                            </div>

                                <div class="o_kanban_image">
                                    <img alt="Avatar"
                                         t-att-src="kanban_image('setu.school', 'image', record.image.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="address"/>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                    <field name="city_id"/>
                                    <field name="teacher_ids"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="setu_school__view_form" model="ir.ui.view">
            <field name="name">setu.school_.view.form</field>
            <field name="model">setu.school</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="School">
                    <header>
                        <button string="Assign Principle" name="%(setu_school_management.setu_school_wizard_action)d"
                                type="action" class="oe_highlight"/>
                    </header>

                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="city_id" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="user_id"/>
                                <field name="teacher_id"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="phone" widget="phone"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Student">
                                <field name="student_ids"/>
                            </page>
                            <page string="Teacher">
                                <field name="teacher_ids"/>
                            </page>
                            <page string="Standards">
                                <field name="school_standard_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_school__action" model="ir.actions.act_window">
            <field name="name">School</field>
            <field name="res_model">setu.school</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem id="root" name=" SetuSchool"/>
        <menuitem id="root1" name="Setu School" parent="root" groups="setu_school_management.group_school"/>
        <menuitem id="setu_school__menu" action="setu_school__action" parent="root1"/>

    </data>
</odoo>