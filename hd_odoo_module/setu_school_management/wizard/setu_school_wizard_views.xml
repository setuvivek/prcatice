<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
         <record id="setu_school_action_view_form" model="ir.ui.view">
            <field name="name">setu.school.action.view.form</field>
            <field name="model">setu.school.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="teacher_id"/>
                        </group>
                    </group>
                     <footer>
                        <button string="Assign Principle" name="action_assign_principle" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="setu_school_wizard_action" model="ir.actions.act_window">
            <field name="name">School Wizard</field>
            <field name="res_model">setu.school.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="setu_school_wizard_menu" action="setu_school_wizard_action" name="Wizard" parent="root1"/>

    </data>
</odoo>
