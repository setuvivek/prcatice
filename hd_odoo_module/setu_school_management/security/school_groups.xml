<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_setu_school_management">
            <field name="name">Setu School</field>
            <field name="sequence">15</field>
        </record>

        <record id="group_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="setu_school_management.module_setu_school_management"/>
            <field name="implied_ids" eval="[(4, ref('setu_school_management.group_form'))]"/>
        </record>

        <record id="group_teacher" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="setu_school_management.module_setu_school_management"/>
            <field name="implied_ids" eval="[(4, ref('setu_school_management.group_student'))]"/>
        </record>

        <record id="group_school" model="res.groups">
            <field name="name">School</field>
            <field name="category_id" ref="setu_school_management.module_setu_school_management"/>
            <field name="implied_ids" eval="[(4, ref('setu_school_management.group_teacher'))]"/>
        </record>

        <record id="group_form" model="res.groups">
            <field name="name">Admission Form</field>
            <field name="category_id" ref="setu_school_management.module_setu_school_management"/>
        </record>

    </data>

    <data>
        <record id="student_record_rule" model="ir.rule">
            <field name="name">Student Record Rule</field>
            <field name="model_id" ref="setu_school_management.model_setu_student"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('setu_school_management.group_student'))]"/>
        </record>
    </data>
</odoo>