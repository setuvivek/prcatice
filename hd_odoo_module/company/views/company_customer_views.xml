<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="company_customer_view_tree" model="ir.ui.view">
            <field name="name">company.customer.view.tree</field>
            <field name="model">company.customer</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="gender"/>
                    <field name="dob"/>
                    <field name="project_id"/>
                </tree>
            </field>
        </record>

        <record id="company_customer_view_form" model="ir.ui.view">
            <field name="name">company.customer.view.form</field>
            <field name="model">company.customer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Customer">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="address"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="dob"/>
                                <field name="project_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="company_customer_action" model="ir.actions.act_window">
            <field name="name">Customer</field>
            <field name="res_model">company.customer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root" name="Company"/>
        <menuitem id="root1" name="Company" parent="root"/>

        <menuitem id="company_customer_menu" action="company_customer_action" parent="root1"/>
    </data>
</odoo>