<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="company_manager_view_tree" model="ir.ui.view">
            <field name="name">company.manager.view.tree</field>
            <field name="model">company.manager</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="address"/>
                    <field name="gender"/>
                    <field name="dob"/>
                    <field name="is_present"/>
                    <field name="salary"/>
                    <field name="department_id"/>
                    <field name="employee_ids"/>
                    <field name="project_id"/>
                    <field name="project_ids"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="company_manager_view_form" model="ir.ui.view">
            <field name="name">company.manager.view.form</field>
            <field name="model">company.manager</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Manager">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="city_id" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="gender"/>
                                <field name="dob"/>
                                <field name="is_present"/>
                            </group>
                            <group>
                                <field name="salary"/>
                                <field name="department_id"/>
                                <field name="project_id" options="{'no_open': True}"/>
                                <field name="city_id"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Employee">
                                <field name="employee_ids">
                                    <tree editable="bottom">
                                        <field name="name" optional="show"/>
                                        <field name="code" optional="hide"/>
                                        <field name="address" optional="show"/>
                                        <field name="gender" optional="hide"/>
                                        <field name="dob" optional="hide"/>
                                        <field name="is_present" optional="hide"/>
                                        <field name="salary" optional="hide"/>
                                        <field name="city_id" optional="show"/>
                                        <field name="state_id" optional="hide"/>
                                        <field name="country_id" optional="hide"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Proects">
                                <field name="project_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="company_manager_action" model="ir.actions.act_window">
            <field name="name">Manager</field>
            <field name="res_model">company.manager</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="company_manager_menu" action="company_manager_action" parent="root1"/>
    </data>
</odoo>