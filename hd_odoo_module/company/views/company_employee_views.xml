<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="company_employee_view_tree" model="ir.ui.view">
            <field name="name">company.employee.view.tree</field>
            <field name="model">company.employee</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="address"/>
                    <field name="gender"/>
                    <field name="dob"/>
                    <field name="join_date"/>
                    <field name="is_present"/>
                    <field name="salary"/>
                    <field name="manager_id"/>
                    <field name="project_id"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="company_employee_view_form" model="ir.ui.view">
            <field name="name">company.employee.view.form</field>
            <field name="model">company.employee</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Employee">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="city_id" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="gender"/>
                                <field name="dob"/>
                                <field name="join_date"/>
                                <field name="is_present"/>
                            </group>
                            <group>
                                <field name="salary"/>
                                <field name="department_id" options="{'no_open': True}"/>
                                <field name="manager_id" options="{'no_open': True}"/>
                                <field name="project_id" options="{'no_open': True}"/>
                                <field name="city_id"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="company_employee_action" model="ir.actions.act_window">
            <field name="context">{'default_zip':3600}</field>
            <field name="name">Employee</field>
            <field name="res_model">company.employee</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root" name="Company"/>
        <menuitem id="root1" name="Company" parent="root"/>

        <menuitem id="company_employee_menu" action="company_employee_action" parent="root1"/>
    </data>
</odoo>