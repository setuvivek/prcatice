<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sales_extended_inherited_view_order_form" model="ir.ui.view">
            <field name="name">sales.extended.inherited.view.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_order_template_id']" position="after">
                    <field name="use_reward_point"/>
                    <field name="reward_points" attrs="{'invisible': [('use_reward_point', '=', False)],
                                                        'required': [('use_reward_point', '!=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>