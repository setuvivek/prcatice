<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_electronic_item_view_tree" model="ir.ui.view">
            <field name="name">setu.electronic.item.view.tree</field>
            <field name="model">setu.electronic.item</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Electronic Item">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="price"/>
                    <field name="quantity"/>
                    <field name="total_price"/>
                    <field name="manufacture_date"/>
                    <field name="warranty"/>
                    <field name="is_it_predefined"/>
                </tree>
            </field>
        </record>

        <record id="setu_electronic_item_view_form" model="ir.ui.view">
            <field name="name">setu.electronic.item.view.form</field>
            <field name="model">setu.electronic.item</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Electronic Item">
                    <sheet>
                        <group string="Product Record">
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="price"/>
                                <field name="quantity"/>
                                <field name="total_price"/>
                                <field name="priority" widget="priority" class="mr-3"/>

                            </group>
                            <group>
                                <field name="code"/>
                                <field name="description"/>
                                <field name="is_it_predefined"/>
                                <field name="manufacture_date"/>
                                <field name="warranty"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="setu_electronic_item_action" model="ir.actions.act_window">
            <field name="name">Electronic Item</field>
            <field name="res_model">setu.electronic.item</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root" name="Setu Electronic"/>
        <menuitem id="root1" name="Setu Repair" parent="root"/>
        <menuitem id="setu_electronic_item_menu" action="setu_electronic_item_action" parent="root1"/>
    </data>
</odoo>