<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_company_view_tree" model="ir.ui.view">
            <field name="name">setu.company.view.tree</field>
            <field name="model">setu.company</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Setu Company">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="website"/>
                </tree>
            </field>
        </record>

        <record id="setu_company_view_form" model="ir.ui.view">
            <field name="name">setu.company.view.form</field>
            <field name="model">setu.company</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Setu Company">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                 <label for="street" string="Address"/>
                                 <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="city_id" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="email" widget="email"/>
                                <field name="phone" widget="phone"/>
                                <field name="website" widget="url" text_field="name" placeholder="e.g. www.odoo.com"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="setu_company_action" model="ir.actions.act_window">
            <field name="name">Company</field>
            <field name="res_model">setu.company</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setu_company_menu" action="setu_company_action" parent="root1"/>
    </data>
</odoo>