<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_repair_item_view_tree" model="ir.ui.view">
            <field name="name">setu.repair.item.view.tree</field>
            <field name="model">setu.repair.item</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Repair Item">
                    <field name="description"/>
                    <field name="setu_item_id"/>
                    <field name="quantity"/>
                    <field name="warranty_expiration" widget="remaining_days"/>
                </tree>
            </field>
        </record>

        <record id="setu_repair_item_view_form" model="ir.ui.view">
            <field name="name">setu.repair.item.view.form</field>
            <field name="model">setu.repair.item</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Repair Item">
                    <header>
                        <button name="submit_request" string="Submit Request" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="setu_item_id" options="{'no_open':True}"/>
                                <field name="description"/>
                                <field name="show_request"/>
                                <field name="total_request"/>
                                 <field name="quantity"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="item_company"/>
                                <field name="warranty_expiration" widget="remaining_days"/>
                                <field name="customer_id"/>
                                <field name="customer_email"/>
                                <field name="customer_phone"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Request" attrs="{'invisible':[('show_request', '!=', True)]}">
                                <field name="all_request_ids">
                                    <tree editable="bottom">
                                        <field name="repair_item_id"/>
                                        <field name="repair_description"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Repair Notes">
                                 <div class="o_notes_format">
                                    <field name="repair_notes" placeholder="Notes about repair..." class="o_notes_street"/>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="setu_repair_item_action" model="ir.actions.act_window">
            <field name="context">{'default_quantity':1}</field>
            <field name="name">Repair Item</field>
            <field name="res_model">setu.repair.item</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setu_repair_item_menu" action="setu_repair_item_action" parent="root1"/>
    </data>
</odoo>



