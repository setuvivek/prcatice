<!--                    <button name="button_action" string="Submit" type="object"/>-->
                    <button name="%(electricshop_repair_request_submit_action1)d" class="oe_highlight" string="Submit" type="action"/>

                </sheet>
            </form>
        </field>
    </record>
    <record id="electricshop_repair_action" model="ir.actions.act_window">
        <field name="name">Electricshop Repair</field>
        <field name="res_model">electricshop.repair</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="electricshop_repair_action1" model="ir.actions.act_window">
        <field name="name">Electricshop Repair1</field>
        <field name="res_model">electricshop.repair</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_bill_id': active_id,'default_description': active_id}</field>
    </record>
    <menuitem id="electricshop_repair_main_menu"
              name="Repairing"
              parent="root"
    />
    <menuitem id="electricshop_repair_menu"
              name=" Repair Request"
              parent="electricshop_repair_main_menu"
              action="electricshop_repair_action"
    />
</odoo>