<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="electricshop_repair_view_tree" model="ir.ui.view">
        <field name="name">electricshop.repair.view.tree</field>
        <field name="model">electricshop.repair</field>
        <field name="arch" type="xml">
            <tree string="Electricshop Repair">
                <field name="name"/>
                <field name="bill_id"/>
                <field name="user_id"/>
                <field name="seller_id"/>
                <field name="description"/>
                <field name="items_ids"/>
<!--                <field name="test"/>-->
            </tree>
        </field>
    </record>
    <record id="electricshop_repair_view_form" model="ir.ui.view">
