        <field name="model">electricshop.repair</field>
        <field name="arch" type="xml">
            <form string="Electricshop Repair">

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="bill_id"/>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="seller_id"/>
                        <field name="description"/>
<!--                        <field name="test"/>-->
                        <!--                        <field name="items_ids"/>-->
                    </group>
                    <notebook>
                        <page string="Purchase Items">
                            <field name="items_ids">
                                <tree>
                                    <field name="name" optional="show"/>
                                    <field name="price" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
