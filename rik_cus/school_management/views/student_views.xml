<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="student_view_tree" model="ir.ui.view">
            <field name="name">student.view.tree</field>
            <field name="model">student</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Student">
                    <field name="name"/>
                    <field name="std"/>
                    <field name="cls"/>
                    <field name="gender"/>
                    <field name="other"/>
                    <field name="age"/>
                    <field name="birth_date"/>
                    <field name="teacher_id"/>
                    <field name="city_id"/>
                    <field name="teacher_ids"/>
                    <field name="math_teacher_ids"/>
                </tree>
            </field>
        </record>


        <record id="student_view_form" model="ir.ui.view">
            <field name="name">student.view.form</field>
            <field name="model">student</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="student_data">
                            <group>
                                <field name="name"/>
                                <field name="std"/>
                                <field name="cls" attrs="{'invisible': ['|', ('name', '=', False), ('std', '=', False)]}" />
                                <field name="teacher_ids"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="other" attrs="{'invisible':[('gender', '!=' ,'other')], 'required': [('age', '=', 30)]}"/>
                                <field name="birth_date"/>
                                <field name="teacher_id" domain="[('city_id', '=', city_id)]"/>
<!--                                <field name="teacher_id" domain="[('gender', '=', 'female')]"/>-->
                                <field name="city_id"/>
<!--                                <field name="city_id" domain="[('city_id','=', 'Rajasthan')]"/>-->
                                <field name="math_teacher_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_action" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">student</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="root" name="School"/>
        <menuitem id ="root1" name="School" action = "student_action" parent="root"/>
        <menuitem id ="riken_personal" name="Student" action="student_action" sequence="1" parent = "root1"/>
    </data>
</odoo>

