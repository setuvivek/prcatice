<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="teacher_view_tree" model="ir.ui.view">
            <field name="name">teacher.view.tree</field>
            <field name="model">teacher</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Teacher">
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="phn_no"/>
                    <field name="city_id"/>
                    <field name="joining_date"/>
                    <field name="student_ids"/>
                    <field name="department_ids"/>
                </tree>
            </field>
        </record>


        <record id="teacher_view_form" model="ir.ui.view">
            <field name="name">teacher.view.form</field>
            <field name="model">teacher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="teacher_data">
                            <group>
                                <field name="name"/>
                                <field name="gender"/>
                                <field name="age"/>
                                <field name="phn_no"/>
                                <field name="city_id"/>
                                <field name="joining_date" attrs="{'invisible': ['|', ('name', '=', False), ('city_id', '=', False)]}"/>
<!--                                attrs="{'invisible': ['|', ('name', '=', False), ('city_id', '=', True)]}"-->
                            </group>
                            <group>
<!--                                <field name="student_ids" domain="[('gender', '!=', 'male')]"/>-->
                                <field name="department_ids"/>
                            </group>
                        </group>
                        <notebook attrs="{'invisible': [('phn_no', '=', 0)]}">
                            <page string="student">
                                <field name="student_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="std"/>
                                        <field name="cls"/>
                                        <field name="gender"/>
                                        <field name="age" optional="hide"/>
                                        <field name="birth_date" optional="hide"/>
                                        <field name="teacher_id" options="{'no_create': False 'no_open': False} "/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <notebook attrs="{'invisible': [('phn_no', '=', 0)]}">
                            <page string="department">
                                <field name="department_ids">
                                    <tree editable="bottom">
                                        <field name="department"/>
                                        <field name="teacher_id" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="teacher_action" model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="res_model">teacher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="teacher_management" action="teacher_action" name="Teacher" sequence="1" parent = "root1"/>
    </data>
</odoo>