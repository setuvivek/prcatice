<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="city_view_tree" model="ir.ui.view">
            <field name="name">city.view.tree</field>
            <field name="model">city</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Student">
                    <field name="name"/>
                    <field name="pincode"/>
                    <field name="district"/>
                    <field name="city_id"/>
                    <field name="city_idd"/>
                    <field name="c_id"/>
                </tree>
            </field>
        </record>


        <record id="city_view_form" model="ir.ui.view">
            <field name="name">city.view.form</field>
            <field name="model">city</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="%(city_action)d" string="City" type="action" attrs="{'invisible': [('city_idd', '=', False)]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group string="city data">
                            <field name="name"/>
                            <field name="pincode"/>
                            <field name="district"/>
                            <field name="city_id" domain="[('name','!=', 'Gujarat')]"/>
                            <field name="city_idd" options="{'no_open':True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="c_id"/>
                        </group>
                        <notebook>
                            <page string="customer" attrs="{'invisible': [('city_idd', '=', False)]}">
                                <field name = "c_id">
                                    <tree>
                                        <field name="first_name"/>
                                        <field name="last_name"/>
                                        <field name="customer" optional="hide"/>
                                        <field name="city_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="city_action" model="ir.actions.act_window">
            <field name="name">City</field>
            <field name="res_model">city</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root" name="Contact"/>
        <menuitem id ="root1" name="Configuration" action = "city_action" parent="root"/>
        <menuitem id ="contact_management" name="City" action="city_action" sequence="1" parent = "root1"/>
    </data>
</odoo>
