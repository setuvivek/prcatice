<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="student_view_tree" model="ir.ui.view">
            <field name="name">student.view.tree</field>
            <field name="model">setu.student</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="setu_student_data">
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="last_name"/>
                    <field name="gender"/>
                    <field name="dob"/>
                    <field name="active"/>
                    <field name="address"/>
                    <field name="standard_id"/>
                    <field name="division_id"/>
                    <field name="medium_id"/>
                    <field name="school_id"/>
                    <field name="blood_group"/>
                    <field name="weight"/>
                    <field name="height"/>
                    <field name="state"/>
                    <field name="terminate_reason"/>
                    <field name="admission_date"/>
                    <field name="academic_year_id"/>
                    <field name="roll_no"/>
                    <field name="cast_id"/>
                    <field name="mother_tongue_id"/>
                    <field name="class_teacher_id"/>
                </tree>
            </field>
        </record>


        <record id="student_view_form" model="ir.ui.view">
            <field name="name">student.view.form</field>
            <field name="model">setu.student</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
<!--                    <header>-->
<!--                        <button name="update_rollno" string="Update" type="object"/>&ndash;&gt;-->
<!--                    </header>-->
                    <sheet>
                        <group string="setu_student_data">
                            <group>
                                <field name="first_name"/>
                                <field name="middle_name"/>
                                <field name="last_name"/>
                                <field name="gender"/>
                                <field name="dob"/>
                                <field name="active"/>
                                <field name="address"/>
                                <field name="standard_id"/>
                                <field name="division_id"/>
                                <field name="medium_id"/>
                                <field name="school_id"/>
                            </group>
                            <group>
                                <field name="blood_group"/>
                                <field name="weight"/>
                                <field name="height" />
                                <field name="state"/>
                                <field name="terminate_reason"/>
                                <field name="admission_date"/>
                                <field name="academic_year_id"/>
                                <field name="roll_no"/>
                                <field name="cast_id"/>
                                <field name="mother_tongue_id"/>
                                <field name="class_teacher_id" attrs="{'invisible': [('standard_id', '=' , False), ('blood_group', '=' , True)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_action" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">setu.student</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="student_management" action="student_action" name="Student" sequence="1" parent="root1"/>
    </data>
</odoo>