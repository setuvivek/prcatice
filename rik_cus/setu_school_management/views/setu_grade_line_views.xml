<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="grade_line_view_tree" model="ir.ui.view">
            <field name="name">grade.line.view.tree</field>
            <field name="model">setu.grade.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Grade_line">
                    <field name="from_mark"/>
                    <field name="to_mark"/>
                    <field name="grade_name"/>
                    <field name="fail"/>
                    <field name="grade_id"/>
                </tree>
            </field>
        </record>


        <record id="grade_line_view_form" model="ir.ui.view">
            <field name="name">grade.line.view.form</field>
            <field name="model">setu.grade.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="grade_line_data">
                            <field name="from_mark"/>
                            <field name="to_mark"/>
                            <field name="grade_name"/>
                            <field name="fail"/>
                            <field name="grade_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="grade_line_action" model="ir.actions.act_window">
            <field name="name">Grade Line</field>
            <field name="res_model">setu.grade.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="grade_line_management" action="grade_line_action" name="Grade Line" sequence="1" parent = "root1"/>
    </data>
</odoo>