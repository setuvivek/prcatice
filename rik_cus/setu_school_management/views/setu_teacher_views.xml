<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="teacher_view_tree" model="ir.ui.view">
            <field name="name">teacher.view.tree</field>
            <field name="model">setu.teacher</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="setu_teacher_data">
                    <field name="standard_id"/>
                    <field name="subject_ids"/>
                    <field name="school_id"/>
                    <field name="student_ids"/>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="mobile"/>
                    <field name="work_city_id"/>
                    <field name="work_state_id"/>
                    <field name="work_country_id"/>
                    <field name="home_city_id"/>
                    <field name="home_state_id"/>
                    <field name="home_country_id"/>
                    <field name="medium_id"/>
                    <field name="division_id"/>
                    <field name="class_teacher"/>
                </tree>
            </field>
        </record>


        <record id="teacher_view_form" model="ir.ui.view">
            <field name="name">teacher.view.form</field>
            <field name="model">setu.teacher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="setu_teacher_data">
                            <group>
                                <field name="standard_id"/>
                                <field name="subject_ids"/>
                                <field name="school_id"/>
                                <field name="name"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="mobile"/>
                                <field name="medium_id"/>
                            </group>
                            <group>
                                <field name="work_city_id"/>
                                <field name="work_state_id"/>
                                <field name="work_country_id"/>
                                <field name="home_city_id"/>
                                <field name="home_state_id"/>
                                <field name="home_country_id"/>
                                <field name="division_id"/>
                                <field name="class_teacher" attrs="{'invisible': [('division_id', '=', False)]}"/>
                            </group>
                        </group>
                        <notebook attrs="{'invisible': [('class_teacher', '=', False)]}">
                            <page string="Students">
                                <field name="student_ids">
                                    <tree editable="bottom">
                                        <field name="first_name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="teacher_action" model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="res_model">setu.teacher</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="teacher_management" action="teacher_action" name="Teacher" sequence="1" parent = "root1"/>
    </data>
</odoo>