<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="setu_standard_division_view_tree" model="ir.ui.view">
        <field name="name">setu.standard.division.view.tree</field>
        <field name="model">setu.standard.division</field>
        <field name="arch" type="xml">
            <tree string="Setu Standard Division">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="setu_standard_division_view_form" model="ir.ui.view">
        <field name="name">setu.standard.division.view.form</field>
        <field name="model">setu.standard.division</field>
        <field name="arch" type="xml">
            <form string="Setu Standard Division">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_standard_division_action" model="ir.actions.act_window">
        <field name="name">Standard Division</field>
        <field name="res_model">setu.standard.division</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="setu_standard_division_menu"
              name="Standard Division"
              action="setu_standard_division_action"
              parent="root1"
    />
</odoo>