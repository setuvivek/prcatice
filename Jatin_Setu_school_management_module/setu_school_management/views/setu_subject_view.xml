<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="setu_subject_view_tree" model="ir.ui.view">
        <field name="name">setu.subject.view.tree</field>
        <field name="model">setu.subject</field>
        <field name="arch" type="xml">
            <tree string="Setu Subject">
                <field name="name"/>
                <field name="subject_teacher_id"/>
                <field name="student_ids"/>
            </tree>
        </field>
    </record>
    <record id="setu_subject_view_form" model="ir.ui.view">
        <field name="name">setu.subject.view.form</field>
        <field name="model">setu.subject</field>
        <field name="arch" type="xml">
            <form string="Setu Subject">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="subject_teacher_id"/>

                        </group>
                        <notebook>
                            <page string="Student">
                                <field name="student_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="address"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="roll_no"/>
                                        <field name="dob"/>
                                        <field name="teacher_ids"/>
                                        <field name="class_teacher_id"/>
                                        <field name="subject_ids"/>
                                        <field name="school_id"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_subject_action" model="ir.actions.act_window">
        <field name="name">Subject</field>
        <field name="res_model">setu.subject</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="setu_subject_menu"
              name="Subject"
              action="setu_subject_action"
              parent="root1"
    />
</odoo>