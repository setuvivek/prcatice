<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="setu_student_view_tree" model="ir.ui.view">
        <field name="name">setu.student.view.tree</field>
        <field name="model">setu.student</field>
        <field name="arch" type="xml">
            <tree string="Setu Student">
                <field name="teacher_id"/>
                <field name="first_name"/>
                <field name="address"/>
                <field name="gender"/>
                <field name="dob"/>
                <field name="blood_group"/>
                <field name="weight"/>
                <field name="height"/>
                <field name="state"/>
                <field name="terminate_reason"/>
                <field name="active"/>
                <field name="standard_id"/>
                <field name="division_id"/>
                <field name="medium_id"/>
                <field name="school_id"/>
                <field name="admission_date"/>
                <field name="roll_no"/>
                <field name="cast_id"/>
                <field name="other_cast"/>
                <field name="mother_tongue_id"/>


            </tree>
        </field>
    </record>
    <record id="setu_student_view_form" model="ir.ui.view">
        <field name="name">setu.student.view.form</field>
        <field name="model">setu.student</field>
        <field name="arch" type="xml">
            <form string="Setu Student">
                <sheet>
                    <group>
                        <group>
                            <field name="teacher_id"/>
                            <field name="first_name" placeholder="First Name..."/>
                            <span/>
                            <div>
                                <field name="middle_name" placeholder="Middle Name"/>
                                <field name="last_name" placeholder="Last Name"/>
                            </div>

                            <field name="address"/>
                            <field name="gender"/>
                            <field name="dob"/>
                            <field name="blood_group"/>
                            <field name="weight"/>
                            <field name="height"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="terminate_reason"/>
                            <field name="active"/>
                            <field name="standard_id"/>
                            <field name="division_id"/>
                            <field name="medium_id"/>
                            <field name="school_id"/>
                            <field name="admission_date"/>
                            <field name="roll_no"/>
                            <field name="cast_id"/>
                            <field name="other_cast" attrs="{'invisible': [('cast_id','!=', False)]}"/>
                            <field name="mother_tongue_id"/>

                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_student_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">setu.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="setu_student_menu"
              name="Student"
              action="setu_student_action"
              parent="root1"
    />
</odoo>