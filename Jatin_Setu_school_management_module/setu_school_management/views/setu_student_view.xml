<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="setu_student_view_tree" model="ir.ui.view">
        <field name="name">setu.student.view.tree</field>
        <field name="model">setu.student</field>
        <field name="arch" type="xml">
            <tree string="Setu Student">
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="roll_no"/>
                <field name="dob"/>
                <field name="teacher_ids"/>
                <field name="class_teacher_id"/>
                <field name="subject_ids"/>
                <field name="school_id"/>
            </tree>
        </field>
    </record>
    <record id="setu_student_view_form" model="ir.ui.view">
        <field name="name">setu.student.view.form</field>
        <field name="model">setu.student</field>
        <field name="arch" type="xml">
            <form string="Setu Student">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="roll_no"/>
                        </group>
                        <group>
                            <field name="dob"/>
                            <!--                            <field name="teacher_ids"/>-->
                            <field name="class_teacher_id"/>
                            <!--                            <field name="subject_ids"/>-->
                            <field name="school_id"/>
                        </group>
                        <notebook>
                            <page string="Teacher">
                                <field name="teacher_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="address"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="mobile"/>
                                        <field name="school_id"/>
                                        <field name="subject_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Subject">
                                <field name="subject_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="subject_teacher_id"/>
                                        <field name="student_ids"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_student_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">setu.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="setu_student_menu"
              name="Student"
              action="setu_student_action"
              parent="root1"
    />
</odoo>