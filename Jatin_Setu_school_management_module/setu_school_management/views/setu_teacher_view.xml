<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="setu_teacher_view_tree" model="ir.ui.view">
        <field name="name">setu.teacher.view.tree</field>
        <field name="model">setu.teacher</field>
        <field name="arch" type="xml">
            <tree string="Setu Teacher">
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="school_id"/>
                <field name="subject_id"/>
                <!--                <field name="student_ids"/>-->
                <!--                <field name="class_ids"/>-->
            </tree>
        </field>
    </record>
    <record id="setu_teacher_view_form" model="ir.ui.view">
        <field name="name">setu.teacher.view.form</field>
        <field name="model">setu.teacher</field>
        <field name="arch" type="xml">
            <form string="Setu Teacher">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="mobile"/>
                            <field name="school_id"/>
                            <field name="subject_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Student">
                            <field name="student_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="address"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="roll_no"/>
                                    <field name="dob"/>
                                    <field name="teacher_ids"/>
                                    <field name="class_teacher_id"/>
                                    <field name="subject_ids"/>
                                    <field name="school_id"/>
                                </tree>
                            </field>

                        </page>
                        <page string="Class">
                            <field name="class_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="class_teacher_id"/>
                                    <field name="teacher_ids"/>
                                    <field name="student_ids"/>
                                    <field name="school_ids"/>
                                    <field name="subject_ids"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_teacher_action" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="res_model">setu.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="setu_teacher_menu"
              name="Teacher"
              action="setu_teacher_action"
              parent="root1"
    />
</odoo>