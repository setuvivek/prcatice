<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="country_view_tree" model="ir.ui.view">
        <field name="name">country.view.tree</field>
        <field name="model">country</field>
        <field name="arch" type="xml">
            <tree string="Country">
                <!--                <field name="order_id"/>-->
                <field name="country_id"/>
                <field name="name"/>
                <field name="city_idss"/>
<!--                <field name="pa_id"/>-->
<!--                <field name="city_name"/>-->
                <!--                <field name="city_ids"/>-->
                <!--                <field name="state_name"/>-->

            </tree>
        </field>
    </record>

    <record id="country_view_form" model="ir.ui.view">
        <field name="name">Marks Form View</field>
        <field name="model">country</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="country_id"/>
<!--                            <field name="country_name"/>-->
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="city_idss"/>
<!--                            <field name="pa_id"/>-->
                            <!--                           <field name="state_name"/>-->
<!--                            <field name="city_name"/>-->
                            <!--                            <field name="city_ids"/>-->
                            <!--                            <field name="village_name"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Country">
                            <field name="city_idss">
                                <tree string="city" edit="false">
                                    <field name="city_id"/>
                                    <field name="name"/>
                                    <field name="population" optional="hide "/>
                                    <field name="pincode"/>
                                    <field name="city_ids"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="country_action" model="ir.actions.act_window">
        <field name="name">Country</field>
        <field name="res_model">country</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="country_menu"
              name="Country"
              action="country_action"
              parent="root1"/>

    <!--    <menuitem id="order_root_main_menu" name="Order"/>-->
    <!--    <menuitem id="order_root_child_menu" name="Order Details" parent="order_root_main_menu" action="order_action"/>-->
</odoo>

