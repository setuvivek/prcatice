<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="state_view_tree" model="ir.ui.view">
        <field name="name">state.view.tree</field>
        <field name="model">state</field>
        <field name="arch" type="xml">
            <tree string="State">
<!--                <field name="order_id"/>-->
                <field name="state_id"/>
                <field name="name"/>
<!--                <field name="par_id"/>-->
<!--                <field name="city"/>-->
<!--                <field name="village"/>-->
            </tree>
        </field>
    </record>
    <record id="state_view_form" model="ir.ui.view">
        <field name="name">Marks Form View</field>
        <field name="model">state</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="state_id"/>
<!--                            <field name="par_id"/>-->
<!--                            <field name="state_name"/>-->
                        </group>
                        <group>
                            <field name="name"/>
<!--                            <field name="city"/>-->
<!--                            <field name="village"/>-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="state_action" model="ir.actions.act_window">
        <field name="name">State</field>
        <field name="res_model">state</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    <menuitem id="order_root_main_menu" name="Order"/>-->
