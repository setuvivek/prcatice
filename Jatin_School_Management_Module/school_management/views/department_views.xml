<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="department_view_tree" model="ir.ui.view">
        <field name="name">department.view.tree</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <tree string="Department">
                <field name="name"/>
                <field name="hod_id"/>
                <field name="teacher_ids"/>
<!--                <field name="select_teacher_add_ids"/>-->
            </tree>
        </field>
    </record>
    <record id="department_view_form" model="ir.ui.view">
        <field name="name">department.view.form</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hod_id"/>
<!--                         <field name="teacher_ids"/>-->
<!--                         <field name="select_teacher_add_ids"/>-->
                    </group>
                    <notebook>
                        <page string="Teacher">
                            <field name="teacher_ids">
                                <tree>
                                    <field name="name" optional="show"/>
                                    <field name="age" optional="show"/>
                                    <field name="standard" optional="show"/>
                                    <field name="gender" optional="show"/>
                                    <field name="subject" optional="hide"/>
                                    <field name="student_ids" optional="show" />
                                    <field name="department_id" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
     <record id="department_action" model="ir.actions.act_window">
            <field name="name">Department</field>
            <field name="res_model">department</field>
            <field name="view_mode">tree,form</field>
     </record>
    <menuitem id="department_menu"
              name="Department"
              parent="root1"
              action="department_action"
    />
</odoo>