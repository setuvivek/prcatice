<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_academic_month_view_tree" model="ir.ui.view">
            <field name="name">setu.academic.month.view.tree</field>
            <field name="model">setu.academic.month</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="academic month">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="academic_year_id"/>
                </tree>
            </field>
        </record>

        <record id="setu_academic_month_form" model="ir.ui.view">
            <field name="name">setu.academic.month.view.form</field>
            <field name="model">setu.academic.month</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="academic month">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="academic_year_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_academic_month_action" model="ir.actions.act_window">
            <field name="name">Academic Month</field>
            <field name="res_model">setu.academic.month</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setu_academic_month_menu" action="setu_academic_month_action" parent="root1"/>

    </data>
</odoo>