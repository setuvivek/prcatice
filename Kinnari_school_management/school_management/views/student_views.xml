<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="student_view_tree" model="ir.ui.view">
            <field name="name">student.view.tree</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <tree string="student">
                    <field name="name"/>
                    <field name="roll"/>
                    <field name="gender"/>
                    <field name="dobs"/>
                    <field name="teacher1_id"/>
                    <field name="teacher2_id"/>
                    <field name="teacher3_id"/>
                    <field name="enter1"/>
                    <field name="enter2"/>
                    <field name="enter3"/>
                    <field name="com"/>
                    <field name="quantity"/>
                    <field name="stock"/>
                    <field name="address"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="city_id"/>
                </tree>
            </field>
        </record>

        <record id="student_view_form" model="ir.ui.view">
            <field name="name">student.view.form</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <form string="student">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="roll"/>
                            <field name="teach_id1" domain="[('city','in',['Rajkot','Gondal']),('age','&gt;',25)]"/>
                            <field name="teach_id2" domain="[('city','=','Rajkot'),('age','&lt;',25)]"/>
                            <field name="teach_id3" domain="[('age','=',0)]"/>
                            <field name="teach_id4" domain="[('age','&gt;',25),('age','&lt;',35)]"/>
                            <field name="teach_id5" domian="[('city','=','Rajkot'),('age','&lt;',25),'|',('city','=','Gondal'),('age','&gt;',30)]"/>


                            <field name="gender" widget="radio"/>
                            <field name="add" attrs="{'invisible' : [('gender','!=','other')]}"/>
                            <field name="dobs"/>
                            <field name="teacher1_id"/>
                            <field name="teacher2_id"/>
                            <field name="teacher3_id"/>
                            <field name="enter1"/>
                            <field name="enter2"/>
                            <field name="enter3"/>
                            <field name="com"/>
                            <field name="quantity"/>
                            <field name="stock"/>


                        </group>
                        <notebook>
                            <page string="Resident data">
                                <form string="data">
                                    <sheet>
                                        <group>
                                            <field name="address"/>
                                            <field name="country_id"
                                                   attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                            <field name="state_id"
                                                   attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                            <field name="city_id"
                                                   attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>

                                        </group>
                                    </sheet>
                                </form>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="student_search_view" model="ir.ui.view">
            <field name="name">student.search.view</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="roll"/>
                    <field name="gender"/>
                    <field name="dobs"/>


                    <field name="teacher1_id"/>
                    <field name="teacher2_id"/>
                    <field name="teacher3_id"/>
                    <field name="enter1"/>
                    <field name="enter2"/>
                    <field name="enter3"/>
                    <field name="com"/>
                    <filter string="male" name="gender" domain="[('gender','=','male')]"/>
                    <filter string="female" name="gender" domain="[('gender','=','female')]"/>
                </search>
            </field>

        </record>
        <record id="student_action" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="main_menu" name="School" action="student_action"/>
        <menuitem id="student_menu" name="School" action="student_action" parent="main_menu"/>
        <menuitem id="student_menu1" name="Student" action="student_action" parent="student_menu"/>

    </data>
</odoo>

