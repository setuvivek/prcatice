<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="attendee_view_tree" model="ir.ui.view">
            <field name="name">attendee.view.tree</field>
            <field name="model">attendee</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Attendee">
                    <field name="name"/>
                    <field name="mail"/>
                    <field name="is_age"/>
                    <field name="location_ids"/>
                    <field name="gender"/>
                    <field name="phn"/>
                    <field name="birthdate"/>
<!--                    <field name="loc_ids"/>-->
                    <field name="location_id"/>
                </tree>
            </field>
        </record>


        <record id="attendee_view_form" model="ir.ui.view">
            <field name="name">attendee.view.form</field>
            <field name="model">attendee</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="attendee_data">
                            <group>
                                <field name="name"/>
                                <field name="mail"/>
                                <field name="is_age"/>
                                <field name="location_ids"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="phn"/>
                                <field name="birthdate"/>
                                <field name="location_id"/>
<!--                                <field name="loc_ids"/>-->


                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="attendee_action" model="ir.actions.act_window">
            <field name="name">Attendee</field>
            <field name="res_model">attendee</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="root" name="Event"/>
        <menuitem id ="root1" name="Event" action = "attendee_action" parent="root"/>
        <menuitem id ="event_management" name="Attendee" action="attendee_action" sequence="1" parent = "root1"/>
    </data>
</odoo>