<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="location_view_tree" model="ir.ui.view">
            <field name="name">location.view.tree</field>
            <field name="model">location</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Location">
                    <field name="place_name"/>
                    <field name="schedule"/>
                    <field name="event_name"/>
                    <field name="Transportation"/>
<!--                    <field name="attendee_id"/>-->
                    <field name="attendee_ids"/>
                </tree>
            </field>
        </record>


        <record id="location_view_form" model="ir.ui.view">
            <field name="name">location.view.form</field>
            <field name="model">location</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="location_data">

                            <field name="place_name"/>
                            <field name="schedule"/>
                            <field name="event_name"/>
                            <field name="Transportation"/>
<!--                            <field name="attendee_id"/>-->
                            <field name="attendee_ids"/>
                        </group>
                        <notebook>
                            <page string="Attendee">
                                <field name="attendee_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="mail"/>
                                        <field name="is_age"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="location_action" model="ir.actions.act_window">
            <field name="name">Location</field>
            <field name="res_model">location</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="location_management" action="location_action" name="Location" sequence="1" parent = "root1"/>
    </data>
</odoo>