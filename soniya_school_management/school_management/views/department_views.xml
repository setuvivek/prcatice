<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="department_view_tree" model="ir.ui.view">
        <field name="name">department.view.tree</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <tree string="Department">
                <field name="name"/>
<!--                <field name="dep_ids"/>-->
                <field name="department_id"/>
                <field name="city_id"/>
            </tree>
        </field>
    </record>
    <record id="department_view_form" model="ir.ui.view">
        <field name="name">Marks Form View</field>
        <field name="model">department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" placeholder="e.g. Sales Manager"/>
<!--                        <field name="dep_ids"/>-->
                        <field name="department_id"/>
                        <field name="city_id" options="{'no_create':True, 'no_open':True, 'no_edit':True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="department_action" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">department</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
