<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="city_view_tree" model="ir.ui.view">
            <field name="name">city.view.tree</field>
            <field name="model">city</field>
            <field name="arch" type="xml">
                <tree string="city">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="smartcity"/>
                    <field name="state_id"/>
                    <field name="customer_ids"/>
                </tree>
            </field>
        </record>

        <record id="city_view_form" model="ir.ui.view">
            <field name="name">city.view.form</field>
            <field name="model">city</field>
            <field name="arch" type="xml">
                <form string="city">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="smartcity"/>
                            <field name="state_id"/>
                            <field name="customer_ids"/>


                        </group>
                        <notebook>
                            <page string="customer data">
                                <field name="customer_ids">
                                    <tree string="customer data">
                                        <field name="name"/>
                                        <field name="check"/>
                                        <field name="country_id"/>
                                        <field name="state_id"/>
                                        <field name="city_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

         <record id="city_action" model="ir.actions.act_window">
            <field name="name">City</field>
            <field name="res_model">city</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="city_menu" name="City" action="city_action" parent="configuration_menu"/>
    </data>
</odoo>
