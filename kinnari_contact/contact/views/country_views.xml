<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="country_view_tree" model="ir.ui.view">
            <field name="name">country.view.tree</field>
            <field name="model">country</field>
            <field name="arch" type="xml">
                <tree string="country" >
                    <field name="name"/>
                    <field name="code"/>
                    <field name="type"/>
<!--                    <field name="state_id"/>-->
<!--                    <field name="type"/>-->
<!--                    <field name="city_id"/>-->
                    <field name="customer_ids"/>



                </tree>
            </field>
        </record>

        <record id="country_view_form" model="ir.ui.view">
            <field name="name">country.view.form</field>
            <field name="model">country</field>
            <field name="arch" type="xml">
                <form string="country">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="type"/>
<!--                            <field name="state_id"/>-->
<!--                            <field name="type"/>-->
<!--                            <field name="city_id"/>-->
                            <field name="customer_ids"/>


                        </group>
                        <notebook>
                            <page string="customer data">
                                <field name="customer_ids">
                                    <tree string-="customer data" editable="bottom" delete="False">
                                        <field name="name"/>
                                        <field name="check"/>
                                        <field name="city_id" optional="hide"/>
                                        <field name="state_id" optional="hide"/>
                                        <field name="country_id" optional="hide"/>



                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="country_action" model="ir.actions.act_window">
            <field name="name">Country</field>
            <field name="res_model">country</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="main_menu" name="Contact" action="country_action"/>
        <menuitem id="configuration_menu" name="Configuration" action="country_action" parent="main_menu"/>

        <menuitem id="country_menu" name="Country" action="country_action" parent="configuration_menu"/>
    </data>
</odoo>
