<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="state_view_tree" model="ir.ui.view">
            <field name="name">state.view.tree</field>
            <field name="model">state</field>
            <field name="arch" type="xml">
                <tree string="state">
                    <field name="name"/>
                    <field name="country_id"/>
                    <field name="city_ids"/>
                    <field name="customer_ids"/>
                </tree>
            </field>
        </record>

        <record id="city_view_form" model="ir.ui.view">
            <field name="name">state.view.form</field>
            <field name="model">state</field>
            <field name="arch" type="xml">
                <form string="state">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="country_id"/>
                            <field name="city_ids"/>
                            <field name="customer_ids"/>


                        </group>
                        <notebook>
                            <page string="city data">
                                <field name ="city_ids">
                                    <tree name="city data" editable="False" create="False" delete="False">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="smartcity"/>
                                        <field name="state_id" optional="hide"/>
                                        <field name="customer_ids" optional="hide"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <notebook>
                            <page string="customer data">
                                <field name="customer_ids">
                                    <tree name="customer data" editable="False" create="False" delete="False">
                                        <field name="name"/>
                                        <field name="check"/>
                                        <field name="country_id"/>
                                        <field name="state_id"/>
                                        <field name="city_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="state_action" model="ir.actions.act_window">
            <field name="name">State</field>
            <field name="res_model">state</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="state_menu" name="State" action="state_action" parent="configuration_menu"/>
    </data>
</odoo>
