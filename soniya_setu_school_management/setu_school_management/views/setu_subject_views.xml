<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="subject_view_tree" model="ir.ui.view">
        <field name="name">subject.view.tree</field>
        <field name="model">setu.subject</field>
        <field name="arch" type="xml">
            <tree string="subject">
                <field name="name"/>
                <field name="code"/>
                <field name="maximum_marks"/>
                <field name="minimum_marks"/>
                <field name="weightage"/>
                <field name="teacher_ids"/>
                <field name="standard_ids"/>
                <field name="standard_id"/>
                <field name="student_ids"/>

<!--                <field name="subject_teacher_id"/>-->
<!--                <field name="student_ids"/>-->
<!--                <field name="subject_ids"/>-->
            </tree>
        </field>
    </record>
    <record id="subject_view_form" model="ir.ui.view">
        <field name="name">setu.subject.view.form</field>
        <field name="model">setu.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="maximum_marks"/>
                            <field name="minimum_marks"/>
<!--                            <field name="weightage"/>-->
<!--                            <field name="subject_teacher_id"/>-->
<!--                            <field name="student_ids"/>-->
                        </group>
                        <group>
                            <field name="weightage"/>
<!--                            <field name="weightage"/>-->
<!--                            <field name="teacher_ids"/>-->
<!--                            <field name="standard_ids"/>-->
                            <field name="standard_id"/>
<!--                            <field name="student_ids"/>-->
<!--                            <field name="student_ids"/>-->
<!--                            <field name="subject_ids"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Teacher">
                            <field name="teacher_ids"/>
                        </page>
                        <page string="Standard">
                            <field name="standard_ids"/>
                        </page>
                        <page string="Student">
                            <field name="student_ids"/>
                        </page>
                    </notebook>
<!--                    <notebook>-->
<!--                        <page string="Subject">-->
<!--                            <tree string="class"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="subject_teacher_id"/>-->
<!--                            <field name="student_ids"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>
    <record id="subject_action" model="ir.actions.act_window">
        <field name="name">subject</field>
        <field name="res_model">setu.subject</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>

