<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setu_academic_month_view_tree" model="ir.ui.view">
        <field name="name">setu.academic.year.view.tree</field>
        <field name="model">setu.academic.year</field>
        <field name="arch" type="xml">
            <tree string="year">
                <field name="sequence"/>
                <field name="name"/>
                <field name="code"/>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="current"/>
                <field name="month_ids"/>
            </tree>
        </field>
    </record>
    <record id="setu_academic_year_view_form" model="ir.ui.view">
        <field name="name">setu.academic.year</field>
        <field name="model">setu.academic.year</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_done" string="Done" type="object"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="current"/>
<!--                            <field name="month_ids"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Month">
                            <field name="month_ids"/>
                        </page>
                    </notebook>
<!--                    <notebook>-->
<!--                        <page string="School">-->
<!--                            <tree string="school"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="address"/>-->
<!--                            <field name="phone"/>-->
<!--                            <field name="email"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_academic_year_action" model="ir.actions.act_window">
        <field name="name">setu.academic.year</field>
        <field name="res_model">setu.academic.year</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

