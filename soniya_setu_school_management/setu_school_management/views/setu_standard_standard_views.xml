<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setu_standard_standard_view_tree" model="ir.ui.view">
        <field name="name">setu.standard.standard.view.tree</field>
        <field name="model">setu.standard.standard</field>
        <field name="arch" type="xml">
            <tree string="standard">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="setu_standard_standard_view_form" model="ir.ui.view">
        <field name="name">setu.standard.standard.form</field>
        <field name="model">setu.standard.standard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="School">-->
<!--                            <tree string="school"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="address"/>-->
<!--                            <field name="phone"/>-->
<!--                            <field name="email"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_standard_standard_action" model="ir.actions.act_window">
        <field name="name">standard</field>
        <field name="res_model">setu.standard.standard</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="setu_standard_standard_menu"
              name="Standard"
              action="setu_standard_standard_action"
              parent="root1"/>
</odoo>

