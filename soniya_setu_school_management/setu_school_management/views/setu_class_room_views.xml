<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setu_class_room_view_tree" model="ir.ui.view">
        <field name="name">setu.class.room.view.tree</field>
        <field name="model">setu.class.room</field>
        <field name="arch" type="xml">
            <tree string="class">
                <field name="name"/>
                <field name="room_number"/>
            </tree>
        </field>
    </record>
    <record id="setu_class_room_view_form" model="ir.ui.view">
        <field name="name">setu.class.room.form</field>
        <field name="model">setu.class.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="room_number"/>
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="School">-->
<!--                            <tree string="school"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="address"/>-->
<!--                            <field name="phone"/>-->
<!--                            <field name="email"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_class_room_action" model="ir.actions.act_window">
        <field name="name">class</field>
        <field name="res_model">setu.class.room</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="setu_class_room_menu"
              name="Class Room"
              action="setu_class_room_action"
              parent="root1"/>
</odoo>

