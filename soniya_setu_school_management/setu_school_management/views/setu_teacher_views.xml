<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="teachers_view_tree" model="ir.ui.view">
        <field name="name">setu.teacher.view.tree</field>
        <field name="model">setu.teacher</field>
        <field name="arch" type="xml">
            <tree string="teachers">
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="school_id"/>
                <field name="subject_id"/>
                <field name="student_ids"/>
                <field name="class_ids"/>
            </tree>
        </field>
    </record>
    <record id="setu_teacher_view_form" model="ir.ui.view">
        <field name="name">setu.teacher.view.form</field>
        <field name="model">setu.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g.Soniya"/>
                            <field name="address"/>
                            <field name="mobile"/>

<!--                            <field name="class_ids"/>-->
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="school_id"/>
                            <field name="subject_id"/>
<!--                            <field name="student_ids"/>-->
<!--                            <field name="class_ids"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Student">
                            <field name="student_ids"/>
                        </page>
                        <page string="Class">
                            <field name="class_ids"/>
                        </page>
                    </notebook>
<!--                    <notebook>-->
<!--                        <page string="School">-->
<!--                            <tree string="school"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="address"/>-->
<!--                            <field name="phone"/>-->
<!--                            <field name="email"/>-->
<!--                            <field name="mobile"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>
    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">setu.teacher</field>
        <field name="res_model">setu.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>