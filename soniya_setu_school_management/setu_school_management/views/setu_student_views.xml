<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">setu.student.view.tree</field>
        <field name="model">setu.student</field>
        <field name="arch" type="xml">
            <tree string="student">
                <field name="name"/>
                <field name="address"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="roll_no"/>
                <field name="dob"/>
                <field name="teacher_ids"/>
                <field name="class_teacher_id"/>
                <field name="subject_ids"/>
                <field name="school_id"/>
            </tree>
        </field>
    </record>
    <record id="student_view_form" model="ir.ui.view">
        <field name="name">setu.student.view.form</field>
        <field name="model">setu.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="roll_no"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="address"/>
                             <field name="dob"/>
<!--                            <field name="teacher_ids"/>-->
                            <field name="class_teacher_id"/>
<!--                            <field name="subject_ids"/>-->
<!--                            <field name="school_id"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Teacher">
                            <field name="teacher_ids"/>
                        </page>
<!--                        <page string="Class_Teacher">-->
<!--                            <field name="class_teacher_id"/>-->
<!--                        </page>-->
                        <page string="Subject">
                            <field name="subject_ids"/>
                        </page>
                        <page string="School">
                            <field name="school_id"/>
                        </page>
                    </notebook>
<!--                    <notebook>-->
<!--                        <page string="Student">-->
<!--                            <tree string="class"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="subject_teacher_id"/>-->
<!--                            <field name="student_ids"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_student_action" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="res_model">setu.student</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>

