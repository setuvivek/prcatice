<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_view_tree" model="ir.ui.view">
        <field name="name">school.view.tree</field>
        <field name="model">setu.school</field>
        <field name="arch" type="xml">
            <tree string="school">
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
    <record id="school_view_form" model="ir.ui.view">
        <field name="name">setu.school.form</field>
        <field name="model">setu.school</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="School">-->
<!--                            <tree string="school"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="address"/>-->
<!--                            <field name="phone"/>-->
<!--                            <field name="email"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_school_action" model="ir.actions.act_window">
        <field name="name">school</field>
        <field name="res_model">setu.school</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>

