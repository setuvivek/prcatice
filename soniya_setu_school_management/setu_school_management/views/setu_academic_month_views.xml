<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setu_academic_month_view_tree" model="ir.ui.view">
        <field name="name">setu.academic.month.view.tree</field>
        <field name="model">setu.academic.month</field>
        <field name="arch" type="xml">
            <tree string="month">
                <field name="name"/>
                <field name="code"/>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="academic_year_id"/>
            </tree>
        </field>
    </record>
    <record id="setu_academic_month_view_form" model="ir.ui.view">
        <field name="name">setu.academic.month</field>
        <field name="model">setu.academic.month</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(setu_school_action)d" type="action" string="School" />
                </header>
                <sheet>

                    <group>
                        <group>

                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="academic_year_id"/>
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="School">-->
<!--                            <tree string="school"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="address"/>-->
<!--                            <field name="phone"/>-->
<!--                            <field name="email"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_academic_month_action" model="ir.actions.act_window">
        <field name="name">setu.academic.month</field>
        <field name="res_model">setu.academic.month</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="setu_academic_month_menu"
              name="Academic month"
              action="setu_academic_month_action"
              parent="academic"/>
</odoo>