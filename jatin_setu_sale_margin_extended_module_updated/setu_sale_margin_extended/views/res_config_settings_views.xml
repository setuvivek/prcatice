<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_inherited_view_form" model="ir.ui.view">
        <field name="name">res_config_settings_inherited_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pricing_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box"
                     id="sales_commission"
                     title="These fees are set in the sale order line.">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Sales Commission</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                              aria-label="Values set here are company-specific." groups="base.group_multi_company"
                              role="img"/>
                        <div class="text-muted">
                            Sales commission applied on sale order line
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Zakat" for="zakat_percent" class="col-lg-3 o_light_label"/>
                                <field name="zakat_percent" widget="percentage"/>
                            </div>
                            <div class="row">
                                <label string="Sponsor Fee" for="sponsor_fee_percent" class="col-lg-3 o_light_label"/>
                                <field name="sponsor_fee_percent" widget="percentage"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>