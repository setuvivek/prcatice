<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="setu_product_add_to_cart_inherit_id" inherit_id="website_sale.product">

        <xpath expr="//div[@id='add_to_cart_wrap']" position='replace'>
            <t t-if="product.is_quatation">
                <div t-attf-class="align-items-center mb-2 me-auto">
<!--                    <a role="button" id="contactus" t-attf-class="btn btn-primary flex-grow-1" href="/contactus">-->
<!--                        &lt;!&ndash;                       id = contact us kai use ma nthi avtu&ndash;&gt;-->
<!--                        <i class="fa fa-shopping-cart me-2"/>-->
<!--                        Quotation-->
<!--                    </a>-->
                    <a role="button" class="w-100 btn btn-primary" href="/contactus">
                        Quotation
                    </a>
                </div>
            </t>
            <t t-else="">
                <div id="add_to_cart_wrap"
                     t-attf-class="{{'d-none' if combination_info['prevent_zero_price_sale'] else 'd-inline-flex'}} align-items-center mb-2 me-auto">
                    <a data-animation-selector=".o_wsale_product_images" role="button" id="add_to_cart"
                       t-attf-class="btn btn-primary js_check_product a-submit flex-grow-1" href="#">
                        <i class="fa fa-shopping-cart me-2"/>
                        Add to cart
                    </a>
                </div>
            </t>
        </xpath>

    </template>
</odoo>