<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="website_sale_extended_inherited_product_template_only_form_view" model="ir.ui.view">
        <field name="name">website.sale.extended.inherited.product.template.only.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div/span/field[@name='purchase_ok']" position="before">
                <span class="d-inline-block">
                    <field name="is_quatation"/>
                    <label for="is_quatation"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>