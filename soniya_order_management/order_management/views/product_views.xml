<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_view_tree" model="ir.ui.view">
        <field name="name">product.view.tree</field>
        <field name="model">product</field>
        <field name="arch" type="xml">
            <tree string="Product">
                <field name="product_id"/>
                <field name="name"/>
                <field name="price"/>
<!--                <field name="rel_id"/>-->
<!--                <field name="rel_ids"/>-->
            </tree>
        </field>
    </record>
    <record id="product_view_form" model="ir.ui.view">
        <field name="name">Marks Form View</field>
        <field name="model">product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="name"/>
<!--                            <field name="rel_ids"/>-->
                        </group>
                        <group>
                            <field name="price"/>
<!--                            <field name="rel_id"/>-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_action" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">product</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    <menuitem id="product_main_menu" name="Product" parent="order_management.order_root_main_menu"/>-->
<!--    <menuitem id="product_child_menu" name="Product Details" parent="product_main_menu" action="product_action"/>-->
    <menuitem id="root" name="Order"/>
    <menuitem id="root1"
              name="Order"
              parent="root"/>
    <menuitem id="order_menu"
              name="Order"
              action="order_action"
              parent="root1"/>
    <menuitem id="product_menu"
              name="Product"
              action="product_action"
              parent="root1"/>
</odoo>
