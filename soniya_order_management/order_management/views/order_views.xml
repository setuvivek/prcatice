                        </group>
                        <group>
                            <field name="price"/>
                            <field name="orde_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                            <widget name="web_ribbon" text="PAID" bg_color="bg-success" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
