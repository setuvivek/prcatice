<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="order_view_tree" model="ir.ui.view">
            <field name="name">order.view.tree</field>
            <field name="model">order1</field>
            <field name="arch" type="xml">
                <tree string="order">
                    <field name="name"/>
                    <field name="quantity"/>
                    <field name="stock"/>
                    <field name="dos"/>
                    <field name="product_id"/>
                </tree>
            </field>
        </record>

        <record id="order_view_form" model="ir.ui.view">
            <field name="name">order.view.form</field>
            <field name="model">order1</field>
            <field name="arch" type="xml">
                <form string="order">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="product_id"/>
                            </group>
                            <group>
                                <field name="stock"/>
                                <field name="dos"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="order_action" model="ir.actions.act_window">
            <field name="name">Order</field>
            <field name="res_model">order1</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="order_menu" name="Order" action="order_action" parent="product_menu"/>

    </data>
</odoo>
