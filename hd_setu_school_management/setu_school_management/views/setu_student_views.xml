<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_student_view_tree" model="ir.ui.view">
            <field name="name">setu.student.view.tree</field>
            <field name="model">setu.student</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Student">
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="last_name"/>
                    <field name="gender"/>
                    <field name="address"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <field name="date_of_birth"/>
                    <field name="blood_group"/>
                    <field name="weight"/>
                    <field name="height"/>
                    <field name="terminate_reason"/>
                    <field name="active"/>
                    <field name="standard_id"/>
                    <field name="division_id"/>
                    <field name="medium_id"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="school_id"/>
                    <field name="admission_date"/>
                    <field name="academic_year_id"/>
                    <field name="roll_no"/>
                    <field name="mother_tongue_id"/>
                    <field name="teacher_ids"/>
                    <field name="class_teacher_id"/>
                    <field name="subject_ids"/>
                </tree>
            </field>
        </record>

        <record id="setu_student_view_form" model="ir.ui.view">
            <field name="name">setu.student.view.form</field>
            <field name="model">setu.student</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="action_done" string="Action Done" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="first_name"/>
                                <field name="middle_name"/>
                                <field name="last_name"/>
                                <field name="address"/>
                                <field name="blood_group"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="active"/>
                                <field name="school_id"/>
                                <field name="standard_id"/>
                                <field name="division_id"/>
                                <field name="medium_id"/>
                                <field name="mother_tongue_id"/>
                            </group>
                            <group>
                                <field name="city_id"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                                <field name="gender"/>
                                <field name="weight"/>
                                <field name="height"/>
                                <field name="roll_no"/>
                                <field name="terminate_reason"/>
                                <field name="date_of_birth"/>
                                <field name="admission_date"/>
                                <field name="academic_year_id"/>
                                <field name="class_teacher_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Teacher">
                                <field name="teacher_ids"/>
                            </page>
                            <page string="Subject">
                                <field name="subject_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_student_action" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">setu.student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root2" name="Student" parent="root"/>
        <menuitem id="setu_student_menu" action="setu_student_action" parent="root2"/>

    </data>
</odoo>