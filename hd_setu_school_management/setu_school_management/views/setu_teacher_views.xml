<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_teacher_view_tree" model="ir.ui.view">
            <field name="name">setu.teacher.view.tree</field>
            <field name="model">setu.teacher</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Teacher">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="mobile"/>
                    <field name="school_id"/>
                    <field name="subject_id"/>
                    <field name="student_ids"/>
                    <field name="class_ids"/>
                </tree>
            </field>
        </record>

        <record id="setu_teacher_view_form" model="ir.ui.view">
            <field name="name">setu.teacher.view.form</field>
            <field name="model">setu.teacher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Teacher">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="address"/>
                                <field name="email"/>
                                <field name="mobile"/>
                                <field name="subject_id"/>
                            </group>

                            <group>
                                <field name="city_id"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                                <field name="phone"/>
                                <field name="school_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Student">
                                <field name="student_ids"/>
                            </page>
                            <page string="Class">
                                <field name="class_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_teacher_action" model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="res_model">setu.teacher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setu_teacher_menu" action="setu_teacher_action" parent="root1"/>

    </data>
</odoo>