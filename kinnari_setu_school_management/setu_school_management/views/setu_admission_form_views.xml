<odoo>
    <data>
        <record id="setu_admission_form_views_tree" model="ir.ui.view">
            <field name="name">setu.admission.form.view.tree</field>
            <field name="model">setu.admission.form</field>
            <field name="arch" type="xml">
                <tree string="admission_form">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="country_id"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="email" />
                    <field name="phone"/>
                    <field name="dob"/>
                    <field name="class_id"/>
                </tree>
            </field>


        </record>
        <record id = "setu_admission_form_view_form" model="ir.ui.view">
            <field name="name">setu.admission.form.view.form</field>
            <field name="model">setu.admission.form</field>
            <field name="arch" type="xml">
                <form string="admission_form">
<!--                    <header>-->
<!--                        <button name="reset_data" string="reset" type="object"/>-->
<!--                    </header>-->
                    <sheet>
                        <group>
                              <group>
                                  <field name="name"/>
                                  <field name="address"/>
                                  <field name="country_id" attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                  <field name="city_id" attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                  <field name="state_id" attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                              </group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="dob"/>
                                <field name="cname"/>
                                <field name="class_id" options="{'no_create':True}" domain="[('name','=',cname)]"/>
<!--                                <button name="reset_data" string="reset" type="object"/>-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="setu_admission_form_action" model="ir.actions.act_window">
            <field name="name">Setu Admission Form</field>
            <field name="res_model">setu.admission.form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setu_admission_form_menu" name="Setu Admission Form" action="setu_admission_form_action"
                  parent="setu_school_menu"/>


    </data>
</odoo>
