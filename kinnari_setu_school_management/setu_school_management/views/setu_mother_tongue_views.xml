<odoo>
    <data>
        <record id="setu_mother_tongue_views_tree" model="ir.ui.view">
            <field name="name">setu.mother.tongue.view.tree</field>
            <field name="model">setu.mother.tongue</field>
            <field name="arch" type="xml">
                <tree string="setu_mother_tongue">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="setu_mother_tongue_views_form" model="ir.ui.view">
            <field name="name">setu.mother.tongue.view.form</field>
            <field name="model">setu.mother.tongue</field>
            <field name="arch" type="xml">
                <form string="setu_mother_tongue">
                    <sheet>
                        <group>
                            <field name="name"/>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="setu_mother_tongue_action" model="ir.actions.act_window">
            <field name="name">Setu Mother Tongue</field>
            <field name="res_model">setu.mother.tongue</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setu_mother_tongue_menu" name="Setu Mother Tongue" action="setu_mother_tongue_action"
                  parent="sub_menu1"/>
    </data>
</odoo>