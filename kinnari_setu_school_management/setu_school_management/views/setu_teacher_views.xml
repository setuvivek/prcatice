<odoo>
    <data>
        <record id="setu_teacher_views_tree" model="ir.ui.view">
            <field name="name">setu.teacher.view.tree</field>
            <field name="model">setu.teacher</field>
            <field name="arch" type="xml">
                <tree string="teacher">
                    <field name="name"/>
                    <field name="email" />
                    <field name="mobile"/>
                    <field name="phone"/>
                    <field name="standard_id"/>
                    <field name="subject_ids"/>
                    <field name="school_id"/>
                    <field name="student_ids"/>
                </tree>
            </field>


        </record>
        <record id = "setu_teacher_view_form" model="ir.ui.view">
            <field name="name">setu.teacher.view.form</field>
            <field name="model">setu.teacher</field>
            <field name="arch" type="xml">
                <form string="teacher">
                    <sheet>
                        <group>

                            <field name="name"/>
                            <field name="email"/>
                            <field name="mobile"/>
                            <field name="phone"/>
                            <field name="standard_id"/>
                            <field name="division_id"/>
                            <field name="medium_id"/>
                            <field name="school_id"/>
                            <field name="subject_ids"/>
                            <field name="student_ids"/>
                            <field name="is_teacher"/>
                            <field name="address"/>
                            <span/>
                            <div>
                                <field name="country_id" placeholder="Country"
                                       attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                <field name="city_id" placeholder="City"
                                       attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                <field name="state_id" placeholder="state"
                                       attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                <field name="zip" placeholder="zip"
                                       attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                            </div>
<!--                            <field name="home_address" placeholder="Add Address"/>-->
<!--                            <span/>-->
<!--                            <div>-->
<!--                                <field name="street" placeholder="Street"/>-->
<!--                                <field name="country" placeholder="Country"/>-->
<!--                                <field name="city" placeholder="City"/>-->
<!--                                <field name="state" placeholder="state"/>-->
<!--                                <field name="zip" placeholder="zip"/>-->
<!--                            </div>-->


                        </group>
                        <notebook>
                             <page string="Student List">
                                 <field name="student_ids">
                                     <tree string="student list">
                                         <field name="first_name"/>
                                         <field name="middle_name"/>
                                         <field name="last_name"/>
                                         <field name="gender"/>
                                         <field name="date_of_birth"/>
                                         <field name="blood_group"/>
                                         <field name="weight"/>
                                         <field name="height"/>
                                         <field name="state"/>
                                         <field name="terminate_reason"/>
                                         <field name="active"/>
                                         <field name="standard_id"/>
                                         <field name="division_id"/>
                                         <field name="medium_id"/>
                                         <field name="school_id"/>
                                         <field name="admission_date"/>
                                         <field name="academic_year_id"/>
                                         <field name="roll_no"/>
                                         <field name="cast_id"/>
                                         <field name="mother_tongue_id"/>
                                     </tree>
                                 </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>
        <record id="setu_teacher_action" model="ir.actions.act_window">
            <field name="name">Setu Teacher</field>
            <field name="res_model">setu.teacher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="setu_teacher_menu" name="Setu Teacher" action="setu_teacher_action" parent="sub_student_main"/>


    </data>
</odoo>