<odoo>
    <data>
        <record id="setu_grade_line_views_tree" model="ir.ui.view">
            <field name="name">setu.grade.line.view.tree</field>
            <field name="model">setu.grade.line</field>
            <field name="arch" type="xml">
                <tree string="setu_grade_line">
                    <field name="from_mark"/>
                    <field name="to_mark"/>
                    <field name="name"/>
                    <field name="fail"/>
                    <field name="grade_id"/>
                </tree>
            </field>
        </record>
        <record id="setu_grade_line_views_form" model="ir.ui.view">
            <field name="name">setu.grade.line.view.form</field>
            <field name="model">setu.grade.line</field>
            <field name="arch" type="xml">
                <form string="setu_grade_line">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_mark"/>
                                <field name="to_mark"/>
                                <field name="name"/>



                            </group>
                            <group>
                                <field name="fail" widget="boolean_toggle"/>
                                <field name="grade_id" domain="['|','|','&amp;',('result','=',True),('marks','&gt;',25),
                                '&amp;',('result','=',False),('marks','&lt;',25),
                                '&amp;',('scorer','=',True),('marks','&gt;',50)]"
                                       attrs="{'invisible':[('fail','!=',True)]}"/>
                                <field name="names"/>
                                <field name="result"/>
<!--                                <field name="marks"/>-->
<!--                                <field name="scorer"/>-->
                            </group>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="setu_grade_line_action" model="ir.actions.act_window">
            <field name="name">Setu Grade Line</field>
            <field name="res_model">setu.grade.line</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="setu_grade_line_menu" name="Setu Grade Line" action="setu_grade_line_action" parent="sub_menu1"/>
    </data>
</odoo>
