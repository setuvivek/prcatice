<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="setu_school_view_tree" model="ir.ui.view">
        <field name="name">setu.school.view.tree</field>
        <field name="model">setu.school</field>
        <field name="arch" type="xml">
            <tree string="Setu School">
                <field name="name"/>
                <field name="code"/>
                <field name="street"/>
                <field name="required_age"/>
            </tree>
        </field>
    </record>
    <record id="setu_school_view_form" model="ir.ui.view">
        <field name="name">setu.school.view.form</field>
        <field name="model">setu.school</field>
        <field name="arch" type="xml">
            <form string="Setu School">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>

                            <!--                             <field name="address" />-->
                            <field name="street" placeholder="Street..." />

                            <span class="o_form_label o_td_label" name="address"/>

                            <div class="o_address_format">

                                <field name="city" placeholder="City" class="o_address_street"/>
                                <field name="state_id" placeholder="State Id" class="o_address_street"/>
                                <field name="zip" placeholder="Zip" class="o_address_street" invisible = "context.get('hide_zip')"/>
                                <field name="country_id" placeholder="Country Id" class="o_address_street"/>
                                <!--                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>-->
                                <!--                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>-->
                                <!--                                <div name="partner_address_country" class="d-flex justify-content-between">-->
                                <!--                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>-->
                                <!--                                </div>-->
                            </div>


                        </group>
                        <group>
                            <field name="required_age"/>

                        </group>


                    </group>
                    <notebook>
                        <page string="Standard">
                            <field name="school_standard_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
            </form>
        </field>
    </record>
    <record id="setu_school_action" model="ir.actions.act_window">
        <field name="name">School</field>
        <field name="res_model">setu.school</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_city':'Rajkott' , 'hide_zip':1}</field>
    </record>

    <menuitem id="setu_school_menu"
              name="School"
              action="setu_school_action"
              parent="root1"
    />
</odoo>