<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="setu_subject_view_tree" model="ir.ui.view">
        <field name="name">setu.subject.view.tree</field>
        <field name="model">setu.subject</field>
        <field name="arch" type="xml">
            <tree string="Setu Subject">
                <field name="name"/>
                <field name="code"/>
                <field name="maximum_marks"/>
                <field name="minimum_marks"/>
                <field name="weightage"/>
                <field name="standard_id"/>
            </tree>
        </field>
    </record>
    <record id="setu_subject_view_form" model="ir.ui.view">
        <field name="name">setu.subject.view.form</field>
        <field name="model">setu.subject</field>
        <field name="arch" type="xml">
            <form string="Setu Subject">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="maximum_marks"/>
                            <field name="minimum_marks"/>
                            <field name="weightage"/>
                            <field name="standard_id"/>

                        </group>
                        <notebook>
                            <page string="Teacher">
                                <field name="teacher_ids">
                                    <tree>
                                        <field name="standard_id"/>
                                        <field name="school_id"/>
                                        <field name="name"/>
                                        <field name="work_address_street"/>
                                        <field name="home_address_street"/>

                                    </tree>
                                </field>
                            </page>

                            <page string="Standard">
                                <field name="standard_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Student">
                                <field name="student_ids">
                                    <tree>
                                        <field name="first_name" optional="show"/>
                                        <field name="address" optional="show"/>
                                        <field name="gender" optional="show"/>
                                        <field name="dob" optional="show"/>
                                        <field name="blood_group" optional="show"/>
                                        <field name="weight" optional="hide"/>
                                        <field name="height" optional="hide"/>
                                        <field name="state" optional="hide"/>
                                        <field name="terminate_reason" optional="show"/>
                                        <field name="active" optional="show"/>
                                        <field name="standard_id" optional="show"/>
                                        <field name="division_id" optional="show"/>
                                        <field name="medium_id" optional="show"/>
                                        <field name="school_id" optional="show"/>
                                        <field name="admission_date" optional="hide"/>
                                        <field name="roll_no" optional="show"/>
                                        <field name="cast_id" optional="hide"/>
                                        <field name="mother_tongue_id" optional="hide"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="setu_subject_action" model="ir.actions.act_window">
        <field name="name">Subject</field>
        <field name="res_model">setu.subject</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="setu_subject_menu"
              name="Subject"
              action="setu_subject_action"
              parent="root1"
    />
</odoo>