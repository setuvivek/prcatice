<odoo>
    <data>
        <record id="setu_school_views_tree" model="ir.ui.view">
            <field name="name">setu.school.view.tree</field>
            <field name="model">setu.school</field>
            <field name="arch" type="xml">
                <tree string="school">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="address"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="zip"/>
                    <field name="country_id"/>
                    <field name="school_standard_ids"/>
                    <field name="email" />
                    <field name="phone"/>
                </tree>
            </field>


        </record>
        <record id = "setu_school_view_form" model="ir.ui.view">
            <field name="name">setu.school.view.form</field>
            <field name="model">setu.school</field>
            <field name="arch" type="xml">
                <form string="school">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="address"/>
                                <field name="school_standard_ids"/>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="cname"/>
                                <field name="is_school"/>
                            </group>
                        </group>
                        <notebook attrs="{'invisible': [('address','!=',True)]}">
                            <page string="Location Data">
                                <form string="data">
                                    <sheet>
                                        <group>
                                            <!--                                            <field name="address"/>-->
                                            <field name="country_id"
                                                   attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                            <field name="state_id"
                                                   attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                            <field name="city_id"
                                                   attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                            <field name="zip"
                                                   attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>

                                        </group>
                                    </sheet>
                                </form>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="setu_school_action" model="ir.actions.act_window">
            <field name="name">Setu School</field>
            <field name="res_model">setu.school</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="main_menu" name="Setu Record" action="setu_school_action" sequence="1" />
        <menuitem id="setu_school_menu" name="Setu Record" action="setu_school_action" parent="main_menu"/>
        <menuitem id="setu_school_menu1" name="Setu School" action="setu_school_action" parent="setu_school_menu"/>


    </data>
</odoo>