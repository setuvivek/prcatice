<odoo>
    <data>
        <record id="setu_academic_month_views_tree" model="ir.ui.view">
            <field name="name">setu.academic.month.view.tree</field>
            <field name="model">setu.academic.month</field>
            <field name="arch" type="xml">
                <tree string="setu_academic_month">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="academic_year_id"/>
                </tree>
            </field>
        </record>
        <record id="setu_academic_month_views_form" model="ir.ui.view">
            <field name="name">setu.academic.month.view.form</field>
            <field name="model">setu.academic.month</field>
            <field name="arch" type="xml">
                <form string="setu_academic_month">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="academic_year_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="setu_academic_month_action" model="ir.actions.act_window">
            <field name="name">Setu Academic Month</field>
            <field name="res_model">setu.academic.month</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="setu_academic_month_menu" name="Setu Academic Month" action="setu_academic_month_action"
                  parent="sub_menu"/>

    </data>
</odoo>

