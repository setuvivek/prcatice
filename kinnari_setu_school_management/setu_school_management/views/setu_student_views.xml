<odoo>
    <data>
        <record id="setu_student_views_tree" model="ir.ui.view">
            <field name="name">setu.student.view.tree</field>
            <field name="model">setu.student</field>
            <field name="arch" type="xml">
                <tree string="student">
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="last_name"/>
                    <field name="gender"/>
                    <field name="date_of_birth"/>
                    <field name="blood_group"/>
                    <field name="weight"/>
                    <field name="height"/>
                    <field name="state"/>
                    <field name="terminate_reason"/>
                    <field name="active"/>
                    <field name="standard_id"/>
                    <field name="division_id"/>
                    <field name="medium_id"/>
                    <field name="school_id"/>
                    <field name="admission_date"/>
                    <field name="academic_year_id"/>
                    <field name="roll_no"/>
                    <field name="cast_id"/>
                    <field name="mother_tongue_id"/>
                    <field name="teacher_id"/>
                </tree>
            </field>


        </record>
        <record id="setu_student_view_form" model="ir.ui.view">
            <field name="name">setu.student.view.form</field>
            <field name="model">setu.student</field>
            <field name="arch" type="xml">
                <form string="student">
<!--                    <header>-->
<!--                        <button name="action_create" string="New" type="object"/>-->
<!--                    </header>-->
                    <sheet>
                        <group>
                            <group>
                                <field name="first_name" placeholder="first_name"/>
                                <span/>
                                <div>
                                    <field name="middle_name" placeholder="middle_name"/>
                                    <field name="last_name" placeholder="last_name"/>
                                </div>
                                <field name="gender"/>
                                <field name="date_of_birth"/>
                                <field name="blood_group"/>
                                <field name="weight"/>
                                <field name="height"/>
                                <field name="roll_no"/>
                                <field name="teacher_id"/>
                                <field name="address"/>
                                <field name="country_id"
                                       attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                <field name="city_id"
                                       attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>
                                <field name="state_id"
                                       attrs="{'invisible':[('address','!=',True)],'required': [('address', '=', True)]}"/>


                            </group>
                            <group>
                                <field name="state"/>
                                <field name="terminate_reason"/>
                                <field name="active"/>
                                <field name="standard_id"/>
                                <field name="division_id" domain="[('is_div','=',True)]"/>
                                <field name="medium_id" domain="[('is_mid','=',True)]"/>
                                <field name="school_id"/>
                                <field name="admission_date"/>
                                <field name="academic_year_id"/>
                                <field name="cast_id"/>
                                <field name="mother_tongue_id"/>

                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="setu_student_action" model="ir.actions.act_window">
            <field name="name">Setu Student</field>
            <field name="res_model">setu.student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="sub_student_main" name="Setu Student" parent="main_menu"/>
        <menuitem id="setu_student_menu" name="Setu Student" action="setu_student_action" parent="sub_student_main"/>


    </data>
</odoo>