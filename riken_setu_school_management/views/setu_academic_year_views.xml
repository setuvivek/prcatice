<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="academic_year_view_tree" model="ir.ui.view">
            <field name="name">academic.year.view.tree</field>
            <field name="model">setu.academic.year</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Academic Year">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="month_ids"/>
                    <field name="current"/>
                </tree>
            </field>
        </record>

        <record id="academic_year_action" model="ir.actions.act_window">
            <field name="name">Academic Year</field>
            <field name="res_model">setu.academic.year</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="academic_year_view_form" model="ir.ui.view">
            <field name="name">academic.year.view.form</field>
            <field name="model">setu.academic.year</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_done" string="ActionDone" type="object"/>
                    </header>
                    <sheet>
                        <group string="academic_year_data">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="date_start"/>
                                <field name="date_stop"/>
<!--                                <field name="month_ids"/>-->
                                <field name="current"/>
                        </group>
                        <notebook>
                            <page string="Month">
                                <field name = "month_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="date_start"/>
                                        <field name="date_stop"/>
                                        <field name="academic_year_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

<!--        <record id="academic_year_action" model="ir.actions.act_window">-->
<!--            <field name="name">Academic Year</field>-->
<!--            <field name="res_model">setu.academic.year</field>-->
<!--            <field name="view_mode">tree,form</field>-->
<!--        </record>-->

        <menuitem id="academic_year_management" action="academic_year_action" name="Academic Year" sequence="1" parent = "root1"/>
    </data>
</odoo>