<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="company_department_view_tree" model="ir.ui.view">
            <field name="name">company.department.view.tree</field>
            <field name="model">company.department</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="manager_ids"/>
                    <field name="employee_ids"/>
                </tree>
            </field>
        </record>

        <record id="company_department_view_form" model="ir.ui.view">
            <field name="name">company.department.view.form</field>
            <field name="model">company.department</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Customer">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>

                        <notebook>
                            <page string="Manager">
                                <field name="manager_ids">
                                    <tree editable="bottom">
                                        <field name="name" optional="show"/>
                                        <field name="code" optional="hide"/>
                                        <field name="address" optional="hide"/>
                                        <field name="gender" optional="hide"/>
                                        <field name="dob" optional="hide"/>
                                        <field name="is_present" optional="show"/>
                                        <field name="salary" optional="hide"/>
                                        <field name="employee_ids" optional="hide"/>
                                        <field name="project_id" optional="hide"/>
                                        <field name="city_id" optional="show"/>
                                        <field name="state_id" optional="hide"/>
                                        <field name="country_id" optional="hide"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Employee">
                                <field name="employee_ids">
                                    <tree editable="top">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="address"/>
                                        <field name="gender"/>
                                        <field name="dob"/>
                                        <field name="join_date"/>
                                        <field name="is_present"/>
                                        <field name="salary"/>
                                        <field name="manager_id"/>
                                        <field name="project_id"/>
                                        <field name="city_id"/>
                                        <field name="state_id"/>
                                        <field name="country_id"/>
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="company_department_action" model="ir.actions.act_window">
            <field name="name">Department</field>
            <field name="res_model">company.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root" name="Company"/>
        <menuitem id="root1" name="Company" parent="root"/>

        <menuitem id="company_department_menu" action="company_department_action" parent="root1"/>
    </data>
</odoo>