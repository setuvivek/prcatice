<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_partner1_view_tree" model="ir.ui.view">
            <field name="name">contact.partner.view.tree</field>
            <field name="model">contact.partner</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="customer"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="res_partner1_view_form" model="ir.ui.view">
            <field name="name">contact.partner.view.form</field>
            <field name="model">contact.partner</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="city">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="city_id"/>
                                <field name="country_id"/>
                            </group>
                            <group>
                                <field name="customer"/>
                                <field name="state_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <record id="res_partner1_action" model="ir.actions.act_window">
            <field name="name">Customer</field>
            <field name="res_model">contact.partner</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="res_partner1_menu" action="res_partner1_action" parent="root2"/>
    </data>
</odoo>