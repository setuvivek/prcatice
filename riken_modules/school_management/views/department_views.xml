<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="department_view_tree" model="ir.ui.view">
            <field name="name">department.view.tree</field>
            <field name="model">department</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Teacher">
                    <field name="department"/>
                    <field name="teacher_id"/>
                    <field name="city_id"/>
                </tree>
            </field>
        </record>


        <record id="department_view_form" model="ir.ui.view">
            <field name="name">department.view.form</field>
            <field name="model">department</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="department_data">
                                <field name="department"/>
                                <field name="teacher_id"/>
                                <field name="city_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="department_action" model="ir.actions.act_window">
            <field name="name">department</field>
            <field name="res_model">department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="department_management" action="department_action" name="Department" sequence="1" parent = "root1"/>
    </data>
</odoo>