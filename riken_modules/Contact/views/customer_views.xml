<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="customer_view_tree" model="ir.ui.view">
            <field name="name">customer.view.tree</field>
            <field name="model">customer</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="customer">
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="customer"/>
                    <field name="city_id"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="ci_id"/>
                </tree>
            </field>
        </record>


        <record id="customer_view_form" model="ir.ui.view">
            <field name="name">customer.view.form</field>
            <field name="model">customer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="customer data">
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="customer"/>
                            <field name="city_id"/>
                            <field name="country_id"/>
                            <field name="state_id"/>
                            <field name="ci_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_action" model="ir.actions.act_window">
            <field name="name">customer</field>
            <field name="res_model">customer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="customer_management" action="customer_action" name="Customer" sequence="1" parent = "root1"/>
    </data>
</odoo>
