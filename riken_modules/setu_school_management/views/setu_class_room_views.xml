<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="class_room_view_tree" model="ir.ui.view">
            <field name="name">class.room.view.tree</field>
            <field name="model">setu.class.room</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Classroom">
                    <field name="name"/>
                    <field name="number"/>
                </tree>
            </field>
        </record>


        <record id="class_room_view_form" model="ir.ui.view">
            <field name="name">class.room.view.form</field>
            <field name="model">setu.class.room</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="classroom_data">
                                <field name="name"/>
                                <field name="number"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="class_room_action" model="ir.actions.act_window">
            <field name="name">Classroom</field>
            <field name="res_model">setu.class.room</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="classroom_management" action="class_room_action" name="Classroom" sequence="1" parent = "root1"/>
    </data>
</odoo>