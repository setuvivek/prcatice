<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="student_cast_view_tree" model="ir.ui.view">
            <field name="name">student.cast.view.tree</field>
            <field name="model">setu.student.cast</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Student_Cast">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="student_cast_view_form" model="ir.ui.view">
            <field name="name">student.cast.view.form</field>
            <field name="model">setu.student.cast</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="student_cast_data">
                                <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_cast_action" model="ir.actions.act_window">
            <field name="name">Student Cast</field>
            <field name="res_model">setu.student.cast</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="student_cast_management" action="student_cast_action" name="Student Cast" sequence="1" parent = "root1"/>
    </data>
</odoo>