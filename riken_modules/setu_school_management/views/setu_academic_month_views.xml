<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="academic_month_view_tree" model="ir.ui.view">
            <field name="name">academic.month.view.tree</field>
            <field name="model">setu.academic.month</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Academic Month">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="academic_year_id"/>
                </tree>
            </field>
        </record>


        <record id="academic_month_view_form" model="ir.ui.view">
            <field name="name">academic.month.view.form</field>
            <field name="model">setu.academic.month</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="academic_month_data">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="academic_year_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="academic_month_action" model="ir.actions.act_window">
            <field name="name">Academic Month</field>
            <field name="res_model">setu.academic.month</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="academic_month_management" action="academic_month_action" name="Academic Month" sequence="1" parent ="root1"/>
    </data>
</odoo>