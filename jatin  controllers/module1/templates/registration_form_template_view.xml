<odoo>
    <template id="registration">
        <div>
            <h1>Registration form</h1>
        <div style="margin:30px 30px 20px 10px;padding-left:70px;background-color:gray">

            <form style="margin:30px;padding:30px" action="/Registration_formm" method="post">

                <label style="color:white;background-color:black;padding:3px" for="name">Name:</label>
                <br/>
                <br/>
                <input type="text" name="name" placeholder="Name"/>
                <br/>
                <br/>
                <label style="color:white;background-color:black;padding:3px" for="phone">Phone:</label>
                <br/>
                <br/>
                <input type="text" name="phone" placeholder="Phone"/>
                <br/>
                <br/>
                <label style="color:white;background-color:black;padding:3px" for="email">Email:</label>
                <br/>

                <br/>
                <input type="text" name="email" placeholder="Email"/>
                <br/>
                <br/>

                <label style="color:white;background-color:black;padding:3px" for="company_type">company_type:</label>
                <br/>
                <br/>
                <input style="color:white;background-color:black" type="radio" name="company_type" value="person">
                    individual
                </input>
                <input style="color:white;background-color:black" type="radio" name="company_type" value="company">
                    company
                </input>
                <br/>
                <br/>
                <input type="submit" value="Submit"/>
            </form>
