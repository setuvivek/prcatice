<odoo>
    <data>

        <record id="repair_requests_items_view_tree" model="ir.ui.view">
            <field name="name">repair.requests.items.view.tree</field>
            <field name="model">repair.requests.items</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Repair Items">
                    <field name="name"/>
                    <!--                    <field name=""/>-->
                </tree>
            </field>
        </record>

        <record id="repair_requests_items_view_form" model="ir.ui.view">
            <field name="name">repair.requests.items.view.form</field>
            <field name="model">repair.requests.items</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="repair_items">
                    <sheet>
                        <group>
                            <group string="Items Data">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="repairable"/>
                                <field name="warranty" widget="radio" options="{'horizontal': true}"
                                       attrs="{'invisible':[('repairable','!=',True)]}"/>
                                <field name="warranty_period"
                                       attrs="{'invisible':['|',('repairable','!=',True),('warranty','!=','yes')]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Requests">
                                <field name="repair_request_ids">
                                    <tree>
                                        <field name="customer_name_id"/>
                                        <field name="product_id"/>
                                        <field name="purchase_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="repair_requests_items_action" model="ir.actions.act_window">
            <field name="name">Repair Request Items</field>
            <field name="res_model">repair.requests.items</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="root" name="Repair Requests"/>
        <menuitem id="repair_requests_items" name="Repair Items" parent="root" action="repair_requests_items_action"/>


    </data>
</odoo>