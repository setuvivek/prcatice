<odoo>
    <data>

        <record id="repair_requests_status_view_tree" model="ir.ui.view">
            <field name="name">repair.requests.status.view.tree</field>
            <field name="model">repair.requests.status</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="repair_requests_status" editable="bottom">
                    <field name="status"/>
                    <field name="customer_name_id"/>
                    <field name="product"/>
                    <field name="services"/>
                    <field name="remarks"/>
<!--                    <field name="services"/>-->
                </tree>
            </field>
        </record>

        <record id="repair_requests_status_view_form" model="ir.ui.view">
            <field name="name">repair.requests.status.view.form</field>
            <field name="model">repair.requests.status</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="repair_requests_status">
                    <sheet>
                        <group>
                        <group>
                            <field name="customer_name_id"/>
                        </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="repair_requests_status_action" model="ir.actions.act_window">
            <field name="name">Repair Request Status</field>
            <field name="res_model">repair.requests.status</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="repair_requests_status" name="Request Status" parent="root" action="repair_requests_status_action"/>



    </data>
</odoo>