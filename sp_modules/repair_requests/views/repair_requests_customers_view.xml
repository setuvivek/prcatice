<odoo>
    <data>

        <record id="repair_requests_customers_view_tree" model="ir.ui.view">
            <field name="name">repair.requests.customers.view.tree</field>
            <field name="model">repair.requests.customers</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Customers">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="city_id"/>
                </tree>
            </field>
        </record>

        <record id="repair_requests_customers_view_form" model="ir.ui.view">
            <field name="name">repair.requests.customers.view.form</field>
            <field name="model">repair.requests.customers</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Customers">
                    <sheet>
                        <group>
                            <group string="Customers Data">
                                <field name="name"/>
                                <field name="gender" widget="radio" options="{'horizontal': true}"/>
                                <field name="dob" widget="date"/>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="address"/>
                                <field name="state_id" options="{'no_open':True, 'no_create': True}"/>
                                <field name="city_id" options="{'no_open':True, 'no_create': True}"
                                       domain="[('state_id','=',state_id)]"/>


                            </group>
                        </group>

                        <notebook>
                            <page string="Requests">
                                <field name="repair_request_ids">
                                    <tree>
                                        <field name="customer_name_id"/>
                                        <field name="product_id"/>
                                        <field name="purchase_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="repair_requests_customers_action" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">repair.requests.customers</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="repair_requests_customer" name="Customers" parent="root"
                  action="repair_requests_customers_action"/>


    </data>
</odoo>